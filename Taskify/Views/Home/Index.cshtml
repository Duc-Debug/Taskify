@{
    ViewData["Title"] = "Taskify - Manage your tasks efficiently";
    Layout = "_LayoutPublic";
}

<div class="landing-page">
    <div class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto mb-4" src="https://cdn-icons-png.flaticon.com/512/906/906334.png" alt="Taskify Logo" width="72" height="72">

        <h1 class="display-5 fw-bold text-primary">Taskify</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">
                Taskify helps teams move work forward.
                Collaborate, manage projects, and reach new productivity peaks.
                From high rises to the home office, the way your team works is unique.
            </p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-4 gap-3">
                    Sign up - it's free
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary btn-lg px-4">
                    Login
                </a>
            </div>
        </div>
    </div>

    <div class="container px-4 py-5" id="featured-3">
        <h2 class="pb-2 border-bottom">Why Taskify?</h2>
        <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
            <div class="feature col">
                <div class="feature-icon bg-primary bg-gradient text-white rounded-3 mb-3 p-3" style="width: fit-content;">
                    <i class="bi bi-kanban fs-2"></i>
                </div>
                <h3>Kanban Boards</h3>
                <p>Visualize work with Trello-like boards, lists, and cards. Drag and drop with ease to update progress in real-time.</p>
            </div>
            <div class="feature col">
                <div class="feature-icon bg-primary bg-gradient text-white rounded-3 mb-3 p-3" style="width: fit-content;">
                    <i class="bi bi-people fs-2"></i>
                </div>
                <h3>Team Collaboration</h3>
                <p>Invite members, assign tasks, and track your team's progress seamlessly. Keep everyone on the same page.</p>
            </div>
            <div class="feature col">
                <div class="feature-icon bg-primary bg-gradient text-white rounded-3 mb-3 p-3" style="width: fit-content;">
                    <i class="bi bi-lightning fs-2"></i>
                </div>
                <h3>Automation</h3>
                <p>Save time with automated workflows and smart notifications. Focus on what truly matters.</p>
            </div>
        </div>
    </div>
</div>