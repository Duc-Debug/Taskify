<script>
    function toggleDescriptionEdit() {
        const display = document.getElementById('descDisplay');
        const edit = document.getElementById('descEdit');

        if (display.style.display === 'none') {
            display.style.display = 'block';
            edit.style.display = 'none';
        } else {
            display.style.display = 'none';
            edit.style.display = 'block';
            document.getElementById('descriptionTextarea').focus();
        }
    }

    function saveDescription() {
        const description = document.getElementById('descriptionTextarea').value;
        // Make API call to save
        fetch('/Task/UpdateDescription', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ taskId: '@Model.Id', description: description })
        })
        .then(response => {
            if (response.ok) {
                location.reload();
            }
        });
    }

    function addComment() {
        const comment = document.getElementById('commentTextarea').value;
        if (!comment.trim()) return;

        fetch('/Task/AddComment', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ taskId: '@Model.Id', comment: comment })
        })
        .then(response => {
            if (response.ok) {
                location.reload();
            }
        });
    }

    function removeAssignee(userId) {
        fetch('/Task/RemoveAssignee', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ taskId: '@Model.Id', userId: userId })
        })
        .then(response => {
            if (response.ok) {
                location.reload();
            }
        });
    }

    function deleteTask(taskId) {
        if (confirm('Are you sure you want to delete this task?')) {
            fetch(`/Task/Delete/${taskId}`, {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(response => {
                if (response.ok) {
                    window.location.href = '/Board';
                }
            });
        }
    }

    function moveTask() {
        // Show move task modal
        console.log('Move task');
    }

    function copyTask() {
        // Copy task logic
        console.log('Copy task');
    }

    function archiveTask() {
        // Archive task logic
        console.log('Archive task');
    }
</script>