@model Taskify.Models.TaskDetailsViewModel

<!-- Task Details Modal -->
<div class="modal fade" id="taskDetailsModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-scrollable modal-xl">
        <div class="modal-content task-modal">
            <!-- Modal Header -->
            <div class="modal-header task-modal-header">
                <div class="header-left">
                    <div class="task-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="9 11 12 14 22 4" />
                            <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" />
                        </svg>
                    </div>
                    <div>
                        <h3 class="task-title-display">@Model.Title</h3>
                        <p class="task-meta">
                            in list <span class="list-badge">@Model.ListName</span>
                        </p>
                    </div>
                </div>
                <div class="header-actions">
                    <button class="btn-icon" title="Edit" onclick="openEditTaskModal('@Model.Id')">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
                        </svg>
                    </button>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
            </div>

            <!-- Modal Body -->
            <div class="modal-body task-modal-body">
                <div class="task-content-grid">
                    <!-- Main Content -->
                    <div class="task-main-content">
                        <!-- Priority Badge -->
                        <div class="detail-section">
                            <span class="priority-badge priority-@Model.Priority.ToString().ToLower()">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10" />
                                </svg>
                                @Model.Priority Priority
                            </span>
                        </div>

                        <!-- Description -->
                        <div class="detail-section">
                            <div class="section-header">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                                    <polyline points="14 2 14 8 20 8" />
                                    <line x1="16" y1="13" x2="8" y2="13" />
                                    <line x1="16" y1="17" x2="8" y2="17" />
                                    <polyline points="10 9 9 9 8 9" />
                                </svg>
                                <h4>Description</h4>
                                <button class="btn-edit-desc" onclick="toggleDescriptionEdit()">Edit</button>
                            </div>
                            <div class="description-display" id="descDisplay">
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <p>@Model.Description</p>
                                }
                                else
                                {
                                    <p class="description-empty">Add a more detailed description...</p>
                                }
                            </div>
                            <div class="description-edit" id="descEdit" style="display: none;">
                                <textarea class="form-control" rows="4" id="descriptionTextarea">@Model.Description</textarea>
                                <div class="edit-actions">
                                    <button class="btn btn-primary btn-sm" onclick="saveDescription()">Save</button>
                                    <button class="btn btn-secondary btn-sm" onclick="toggleDescriptionEdit()">Cancel</button>
                                </div>
                            </div>
                        </div>

                        <!-- Assignees -->
                        <div class="detail-section">
                            <div class="section-header">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                                    <circle cx="9" cy="7" r="4" />
                                    <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                                </svg>
                                <h4>Members</h4>
                            </div>
                            <div class="assignees-list">
                                @if (Model.Assignees != null && Model.Assignees.Any())
                                {
                                    @foreach (var assignee in Model.Assignees)
                                    {
                                        <div class="assignee-item">
                                            @if (!string.IsNullOrEmpty(assignee.AvatarUrl))
                                            {
                                                <img src="@assignee.AvatarUrl" alt="@assignee.FullName" class="assignee-avatar-lg" />
                                            }
                                            else
                                            {
                                                <div class="assignee-avatar-lg">@assignee.Initials</div>
                                            }
                                            <span>@assignee.FullName</span>
                                            <button class="btn-remove-assignee" onclick="removeAssignee('@assignee.Id')">
                                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <line x1="18" y1="6" x2="6" y2="18" />
                                                    <line x1="6" y1="6" x2="18" y2="18" />
                                                </svg>
                                            </button>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="empty-message">No members assigned</p>
                                }
                                <button class="btn-add-member">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <line x1="12" y1="5" x2="12" y2="19" />
                                        <line x1="5" y1="12" x2="19" y2="12" />
                                    </svg>
                                    Add Member
                                </button>
                            </div>
                        </div>

                        <!-- Activity -->
                        <div class="detail-section">
                            <div class="section-header">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <polyline points="22 12 18 12 15 21 9 3 6 12 2 12" />
                                </svg>
                                <h4>Activity</h4>
                            </div>

                            <!-- Add Comment -->
                            <div class="add-comment">
                                <div class="comment-avatar">
                                    <div class="current-user-avatar">U</div>
                                </div>
                                <div class="comment-input-wrapper">
                                    <textarea class="form-control comment-input" placeholder="Write a comment..." rows="2" id="commentTextarea"></textarea>
                                    <button class="btn btn-primary btn-sm" onclick="addComment()">Comment</button>
                                </div>
                            </div>

                            <!-- Activity Timeline -->
                            <div class="activity-timeline">
                                @if (Model.Activities != null && Model.Activities.Any())
                                {
                                    @foreach (var activity in Model.Activities)
                                    {
                                        <div class="activity-item">
                                            <div class="activity-avatar">
                                                <div class="user-avatar-sm">@activity.UserFullName.Substring(0, 1)</div>
                                            </div>
                                            <div class="activity-content">
                                                <div class="activity-header">
                                                    <strong>@activity.UserFullName</strong>
                                                    <span class="activity-time">@((DateTime.Now - activity.Timestamp).TotalHours < 24 ? (DateTime.Now - activity.Timestamp).Hours + "h ago" : activity.Timestamp.ToString("MMM dd"))</span>
                                                </div>
                                                <p class="activity-text">@activity.Action</p>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Sidebar -->
                    <div class="task-sidebar">
                        <h5>Add to card</h5>

                        <button class="sidebar-btn">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                                <circle cx="8.5" cy="7" r="4" />
                                <line x1="20" y1="8" x2="20" y2="14" />
                                <line x1="23" y1="11" x2="17" y2="11" />
                            </svg>
                            Members
                        </button>

                        <button class="sidebar-btn">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                                <line x1="16" y1="2" x2="16" y2="6" />
                                <line x1="8" y1="2" x2="8" y2="6" />
                                <line x1="3" y1="10" x2="21" y2="10" />
                            </svg>
                            Due Date
                        </button>

                        <button class="sidebar-btn">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48" />
                            </svg>
                            Attachment
                        </button>

                        <h5>Actions</h5>

                        <button class="sidebar-btn" onclick="moveTask()">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="9 18 15 12 9 6" />
                            </svg>
                            Move
                        </button>

                        <button class="sidebar-btn" onclick="copyTask()">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="9" y="9" width="13" height="13" rx="2" ry="2" />
                                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1" />
                            </svg>
                            Copy
                        </button>

                        <button class="sidebar-btn" onclick="archiveTask()">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="21 8 21 21 3 21 3 8" />
                                <rect x="1" y="3" width="22" height="5" />
                                <line x1="10" y1="12" x2="14" y2="12" />
                            </svg>
                            Archive
                        </button>

                        <button class="sidebar-btn danger" onclick="deleteTask('@Model.Id')">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="3 6 5 6 21 6" />
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                            </svg>
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

