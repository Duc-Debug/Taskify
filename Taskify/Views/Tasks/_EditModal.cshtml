@model Taskify.Models.TaskEditViewModel

<!-- Edit Task Modal -->
<div class="modal fade" id="editTaskModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content edit-task-modal">
            <!-- Modal Header -->
            <div class="modal-header">
                <div class="modal-title-wrapper">
                    <div class="modal-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
                        </svg>
                    </div>
                    <h5>Edit Task</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form id="editTaskForm" asp-action="Edit" asp-controller="Task" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="BoardId" />

                    <!-- Task Title -->
                    <div class="form-group">
                        <label asp-for="Title" class="form-label">
                            Task Title <span class="required">*</span>
                        </label>
                        <input asp-for="Title"
                               class="form-control form-control-lg"
                               placeholder="Enter task title"
                               required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description"
                                  class="form-control"
                                  rows="5"
                                  placeholder="Add a detailed description..."></textarea>
                    </div>

                    <!-- Two Column Layout -->
                    <div class="form-grid">
                        <!-- Left Column -->
                        <div class="form-column">
                            <!-- Priority -->
                            <div class="form-group">
                                <label asp-for="Priority" class="form-label">Priority</label>
                                <div class="priority-selector">
                                    <input type="radio" asp-for="Priority" value="Low" id="editPriorityLow" />
                                    <label for="editPriorityLow" class="priority-option low">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="12" cy="12" r="10" />
                                        </svg>
                                        Low
                                    </label>

                                    <input type="radio" asp-for="Priority" value="Medium" id="editPriorityMedium" />
                                    <label for="editPriorityMedium" class="priority-option medium">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="12" cy="12" r="10" />
                                        </svg>
                                        Medium
                                    </label>

                                    <input type="radio" asp-for="Priority" value="High" id="editPriorityHigh" />
                                    <label for="editPriorityHigh" class="priority-option high">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="12" cy="12" r="10" />
                                        </svg>
                                        High
                                    </label>
                                </div>
                            </div>

                            <!-- Due Date -->
                            <div class="form-group">
                                <label asp-for="DueDate" class="form-label">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                                        <line x1="16" y1="2" x2="16" y2="6" />
                                        <line x1="8" y1="2" x2="8" y2="6" />
                                        <line x1="3" y1="10" x2="21" y2="10" />
                                    </svg>
                                    Due Date
                                </label>
                                <input asp-for="DueDate"
                                       type="date"
                                       class="form-control"
                                       min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <div class="date-actions">
                                    <button type="button" class="btn-date-action" onclick="setDueToday()">Today</button>
                                    <button type="button" class="btn-date-action" onclick="setDueTomorrow()">Tomorrow</button>
                                    <button type="button" class="btn-date-action" onclick="clearDueDate()">Clear</button>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="form-column">
                            <!-- Move to List -->
                            <div class="form-group">
                                <label asp-for="ListId" class="form-label">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M9 11H3v7a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7h-6" />
                                        <polyline points="22 6 12 1 2 6" />
                                        <line x1="12" y1="1" x2="12" y2="11" />
                                    </svg>
                                    List
                                </label>
                                <select asp-for="ListId" class="form-select">
                                    <option value="">Select a list...</option>
                                    <!-- These would be populated from the server -->
                                    <option value="list1">To Do</option>
                                    <option value="list2">In Progress</option>
                                    <option value="list3">Done</option>
                                </select>
                            </div>

                            <!-- Assigned Members -->
                            <div class="form-group">
                                <label class="form-label">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                                        <circle cx="9" cy="7" r="4" />
                                        <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                                        <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                                    </svg>
                                    Assigned Members
                                </label>
                                <div class="members-container">
                                    @if (Model.SelectedAssigneeIds != null && Model.SelectedAssigneeIds.Any())
                                    {
                                        <div class="current-members">
                                            @foreach (var assigneeId in Model.SelectedAssigneeIds)
                                            {
                                                <div class="member-tag">
                                                    <div class="member-avatar-sm">JD</div>
                                                    <span>John Doe</span>
                                                    <button type="button" class="btn-remove-member" onclick="removeMember('@assigneeId')">
                                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                            <line x1="18" y1="6" x2="6" y2="18" />
                                                            <line x1="6" y1="6" x2="18" y2="18" />
                                                        </svg>
                                                    </button>
                                                </div>
                                            }
                                        </div>
                                    }
                                    <button type="button" class="btn-add-member-inline" onclick="openMemberSelector()">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <line x1="12" y1="5" x2="12" y2="19" />
                                            <line x1="5" y1="12" x2="19" y2="12" />
                                        </svg>
                                        Add Member
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Change Summary -->
                    <div class="change-summary">
                        <div class="summary-icon">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10" />
                                <path d="M12 16v-4" />
                                <path d="M12 8h.01" />
                            </svg>
                        </div>
                        <div class="summary-text">
                            <strong>Note:</strong> Changes will be saved immediately and visible to all team members.
                        </div>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-outline-danger" onclick="deleteCurrentTask()">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="3 6 5 6 21 6" />
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                    </svg>
                    Delete
                </button>
                <button type="submit" form="editTaskForm" class="btn btn-primary">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12" />
                    </svg>
                    Save Changes
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .edit-task-modal {
        border: none;
        border-radius: 16px;
    }

    .modal-header {
        border-bottom: 1px solid #e2e8f0;
        padding: 20px 24px;
    }

    .modal-title-wrapper {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .modal-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #0ea5e9 0%, #8b5cf6 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .modal-header h5 {
        font-size: 18px;
        font-weight: 700;
        color: #1e293b;
        margin: 0;
    }

    .modal-body {
        padding: 24px;
        max-height: calc(100vh - 250px);
        overflow-y: auto;
    }

    /* Form Groups */
    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: flex;
        align-items: center;
        gap: 6px;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 8px;
        font-size: 14px;
    }

        .form-label svg {
            color: #64748b;
        }

    .required {
        color: #ef4444;
    }

    .form-control,
    .form-select {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        font-size: 14px;
        transition: all 0.3s;
    }

    .form-control-lg {
        padding: 14px 16px;
        font-size: 16px;
        font-weight: 600;
    }

    .form-control:focus,
    .form-select:focus {
        outline: none;
        border-color: #0ea5e9;
        box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
    }

    textarea.form-control {
        resize: vertical;
        font-family: inherit;
    }

    /* Form Grid */
    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    /* Priority Selector */
    .priority-selector {
        display: flex;
        gap: 8px;
    }

        .priority-selector input[type="radio"] {
            position: absolute;
            opacity: 0;
            pointer-events: none;
        }

    .priority-option {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 6px;
        padding: 10px 8px;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 12px;
        font-weight: 600;
    }

        .priority-option:hover {
            border-color: #cbd5e1;
            background: #f8fafc;
        }

    input[type="radio"]:checked + .priority-option.low {
        border-color: #10b981;
        background: #d1fae5;
        color: #059669;
    }

    input[type="radio"]:checked + .priority-option.medium {
        border-color: #f59e0b;
        background: #fef3c7;
        color: #d97706;
    }

    input[type="radio"]:checked + .priority-option.high {
        border-color: #ef4444;
        background: #fee;
        color: #dc2626;
    }

    /* Date Actions */
    .date-actions {
        display: flex;
        gap: 6px;
        margin-top: 8px;
    }

    .btn-date-action {
        flex: 1;
        padding: 6px 10px;
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        border-radius: 6px;
        color: #64748b;
        font-size: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

        .btn-date-action:hover {
            background: #f1f5f9;
            border-color: #0ea5e9;
            color: #0ea5e9;
        }

    /* Members Container */
    .members-container {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 12px;
        min-height: 60px;
    }

    .current-members {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-bottom: 8px;
    }

    .member-tag {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 6px 12px;
        background: linear-gradient(135deg, rgba(14, 165, 233, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
        border: 1px solid #cbd5e1;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        color: #0ea5e9;
    }

    .member-avatar-sm {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background: linear-gradient(135deg, #0ea5e9 0%, #8b5cf6 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 10px;
        font-weight: 600;
    }

    .btn-remove-member {
        background: none;
        border: none;
        color: #94a3b8;
        cursor: pointer;
        padding: 2px;
        display: flex;
        transition: all 0.2s;
    }

        .btn-remove-member:hover {
            color: #ef4444;
        }

    .btn-add-member-inline {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 8px 12px;
        background: #f8fafc;
        border: 1px dashed #cbd5e1;
        border-radius: 8px;
        color: #64748b;
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        width: 100%;
    }

        .btn-add-member-inline:hover {
            background: #f1f5f9;
            border-color: #0ea5e9;
            color: #0ea5e9;
        }

    /* Change Summary */
    .change-summary {
        display: flex;
        gap: 12px;
        padding: 14px 16px;
        background: #eff6ff;
        border-left: 3px solid #0ea5e9;
        border-radius: 10px;
        margin-top: 20px;
    }

    .summary-icon {
        flex-shrink: 0;
        color: #0ea5e9;
    }

    .summary-text {
        flex: 1;
        font-size: 13px;
        color: #1e40af;
        line-height: 1.5;
    }

        .summary-text strong {
            font-weight: 600;
            color: #1e3a8a;
        }

    /* Modal Footer */
    .modal-footer {
        border-top: 1px solid #e2e8f0;
        padding: 16px 24px;
        display: flex;
        gap: 12px;
        justify-content: space-between;
    }

    /* Buttons */
    .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        border: none;
        border-radius: 10px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-primary {
        background: linear-gradient(135deg, #0ea5e9 0%, #8b5cf6 100%);
        color: white;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(14, 165, 233, 0.4);
        }

    .btn-secondary {
        background: #f1f5f9;
        color: #64748b;
    }

        .btn-secondary:hover {
            background: #e2e8f0;
        }

    .btn-outline-danger {
        background: white;
        color: #ef4444;
        border: 2px solid #ef4444;
    }

        .btn-outline-danger:hover {
            background: #fee;
            border-color: #dc2626;
            color: #dc2626;
        }

    .text-danger {
        color: #ef4444;
        font-size: 12px;
        display: block;
        margin-top: 4px;
    }

    @@media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }

        .modal-footer {
            flex-wrap: wrap;
        }

        .btn-outline-danger {
            order: -1;
            width: 100%;
        }
    }
</style>

<script>
    function setDueToday() {
        const today = new Date().toISOString().split('T')[0];
        document.querySelector('input[name="DueDate"]').value = today;
    }

    function setDueTomorrow() {
        const tomorrow = new Date();
        tomorrow.setDate(tomorrow.getDate() + 1);
        document.querySelector('input[name="DueDate"]').value = tomorrow.toISOString().split('T')[0];
    }

    function clearDueDate() {
        document.querySelector('input[name="DueDate"]').value = '';
    }

    function removeMember(memberId) {
        // Remove member from selection
        console.log('Remove member:', memberId);
    }

    function openMemberSelector() {
        // Show member selector modal
        alert('Member selector would open here');
    }

    function deleteCurrentTask() {
        if (confirm('Are you sure you want to delete this task? This action cannot be undone.')) {
            const taskId = document.querySelector('input[name="Id"]').value;
            fetch(`/Task/Delete/${taskId}`, {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload();
                }
            });
        }
    }
</script>