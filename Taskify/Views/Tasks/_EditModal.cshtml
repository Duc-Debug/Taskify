@model Taskify.Models.TaskEditViewModel

<!-- Edit Task Modal -->
<div class="modal fade" id="editTaskModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content edit-task-modal">
            <!-- Modal Header -->
            <div class="modal-header">
                <div class="modal-title-wrapper">
                    <div class="modal-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
                        </svg>
                    </div>
                    <h5>Edit Task</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form id="editTaskForm" asp-action="Edit" asp-controller="Task" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="BoardId" />

                    <!-- Task Title -->
                    <div class="form-group">
                        <label asp-for="Title" class="form-label">
                            Task Title <span class="required">*</span>
                        </label>
                        <input asp-for="Title"
                               class="form-control form-control-lg"
                               placeholder="Enter task title"
                               required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description"
                                  class="form-control"
                                  rows="5"
                                  placeholder="Add a detailed description..."></textarea>
                    </div>

                    <!-- Two Column Layout -->
                    <div class="form-grid">
                        <!-- Left Column -->
                        <div class="form-column">
                            <!-- Priority -->
                            <div class="form-group">
                                <label asp-for="Priority" class="form-label">Priority</label>
                                <div class="priority-selector">
                                    <input type="radio" asp-for="Priority" value="Low" id="editPriorityLow" />
                                    <label for="editPriorityLow" class="priority-option low">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="12" cy="12" r="10" />
                                        </svg>
                                        Low
                                    </label>

                                    <input type="radio" asp-for="Priority" value="Medium" id="editPriorityMedium" />
                                    <label for="editPriorityMedium" class="priority-option medium">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="12" cy="12" r="10" />
                                        </svg>
                                        Medium
                                    </label>

                                    <input type="radio" asp-for="Priority" value="High" id="editPriorityHigh" />
                                    <label for="editPriorityHigh" class="priority-option high">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="12" cy="12" r="10" />
                                        </svg>
                                        High
                                    </label>
                                </div>
                            </div>

                            <!-- Due Date -->
                            <div class="form-group">
                                <label asp-for="DueDate" class="form-label">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                                        <line x1="16" y1="2" x2="16" y2="6" />
                                        <line x1="8" y1="2" x2="8" y2="6" />
                                        <line x1="3" y1="10" x2="21" y2="10" />
                                    </svg>
                                    Due Date
                                </label>
                                <input asp-for="DueDate"
                                       type="date"
                                       class="form-control"
                                       min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <div class="date-actions">
                                    <button type="button" class="btn-date-action" onclick="setDueToday()">Today</button>
                                    <button type="button" class="btn-date-action" onclick="setDueTomorrow()">Tomorrow</button>
                                    <button type="button" class="btn-date-action" onclick="clearDueDate()">Clear</button>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="form-column">
                            <!-- Move to List -->
                            <div class="form-group">
                                <label asp-for="ListId" class="form-label">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M9 11H3v7a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7h-6" />
                                        <polyline points="22 6 12 1 2 6" />
                                        <line x1="12" y1="1" x2="12" y2="11" />
                                    </svg>
                                    List
                                </label>
                                <select asp-for="ListId" class="form-select">
                                    <option value="">Select a list...</option>
                                    <!-- These would be populated from the server -->
                                    <option value="list1">To Do</option>
                                    <option value="list2">In Progress</option>
                                    <option value="list3">Done</option>
                                </select>
                            </div>

                            <!-- Assigned Members -->
                            <div class="form-group">
                                <label class="form-label">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                                        <circle cx="9" cy="7" r="4" />
                                        <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                                        <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                                    </svg>
                                    Assigned Members
                                </label>
                                <div class="members-container">
                                    @if (Model.SelectedAssigneeIds != null && Model.SelectedAssigneeIds.Any())
                                    {
                                        <div class="current-members">
                                            @foreach (var assigneeId in Model.SelectedAssigneeIds)
                                            {
                                                <div class="member-tag">
                                                    <div class="member-avatar-sm">JD</div>
                                                    <span>John Doe</span>
                                                    <button type="button" class="btn-remove-member" onclick="removeMember('@assigneeId')">
                                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                            <line x1="18" y1="6" x2="6" y2="18" />
                                                            <line x1="6" y1="6" x2="18" y2="18" />
                                                        </svg>
                                                    </button>
                                                </div>
                                            }
                                        </div>
                                    }
                                    <button type="button" class="btn-add-member-inline" onclick="openMemberSelector()">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <line x1="12" y1="5" x2="12" y2="19" />
                                            <line x1="5" y1="12" x2="19" y2="12" />
                                        </svg>
                                        Add Member
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Change Summary -->
                    <div class="change-summary">
                        <div class="summary-icon">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10" />
                                <path d="M12 16v-4" />
                                <path d="M12 8h.01" />
                            </svg>
                        </div>
                        <div class="summary-text">
                            <strong>Note:</strong> Changes will be saved immediately and visible to all team members.
                        </div>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-outline-danger" onclick="deleteCurrentTask()">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="3 6 5 6 21 6" />
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                    </svg>
                    Delete
                </button>
                <button type="submit" form="editTaskForm" class="btn btn-primary">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12" />
                    </svg>
                    Save Changes
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function setDueToday() {
        const today = new Date().toISOString().split('T')[0];
        document.querySelector('input[name="DueDate"]').value = today;
    }

    function setDueTomorrow() {
        const tomorrow = new Date();
        tomorrow.setDate(tomorrow.getDate() + 1);
        document.querySelector('input[name="DueDate"]').value = tomorrow.toISOString().split('T')[0];
    }

    function clearDueDate() {
        document.querySelector('input[name="DueDate"]').value = '';
    }

    function removeMember(memberId) {
        // Remove member from selection
        console.log('Remove member:', memberId);
    }

    function openMemberSelector() {
        // Show member selector modal
        alert('Member selector would open here');
    }

    function deleteCurrentTask() {
        if (confirm('Are you sure you want to delete this task? This action cannot be undone.')) {
            const taskId = document.querySelector('input[name="Id"]').value;
            fetch(`/Task/Delete/${taskId}`, {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload();
                }
            });
        }
    }
</script>