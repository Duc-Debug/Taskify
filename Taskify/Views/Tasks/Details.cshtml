@model Taskify.Models.TaskDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="task-details-page">
    <!-- Breadcrumb -->
    <nav class="breadcrumb-nav">
        <a asp-controller="Board" asp-action="Index" class="breadcrumb-link">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                <line x1="9" y1="3" x2="9" y2="21" />
            </svg>
            Boards
        </a>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6" />
        </svg>
        <a asp-controller="Board" asp-action="Details" asp-route-id="@Model.ListId" class="breadcrumb-link">
            @Model.ListName
        </a>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6" />
        </svg>
        <span class="breadcrumb-current">@Model.Title</span>
    </nav>

    <!-- Task Header -->
    <div class="task-header-page">
        <div class="header-left">
            <div class="task-icon-large">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 11 12 14 22 4" />
                    <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" />
                </svg>
            </div>
            <div>
                <h1 class="task-title-page">@Model.Title</h1>
                <div class="task-meta-info">
                    <span class="priority-badge priority-@Model.Priority.ToString().ToLower()">
                        @Model.Priority Priority
                    </span>
                    @if (Model.DueDate.HasValue)
                    {
                        var daysUntilDue = (Model.DueDate.Value.Date - DateTime.Now.Date).Days;
                        var dueDateClass = daysUntilDue < 0 ? "overdue" : daysUntilDue <= 2 ? "urgent" : "normal";

                        <span class="due-date-badge @dueDateClass">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10" />
                                <polyline points="12 6 12 12 16 14" />
                            </svg>
                            @if (daysUntilDue < 0)
                            {
                                <text>Overdue</text>
                            }
                            else if (daysUntilDue == 0)
                            {
                                <text>Due today</text>
                            }
                            else
                            {
                                @Model.DueDate.Value.ToString("MMM dd, yyyy")
                            }
                        </span>
                    }
                </div>
            </div>
        </div>
        <div class="header-actions">
            <button class="btn btn-secondary" onclick="openEditModal()">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
                </svg>
                Edit
            </button>
            <button class="btn btn-outline-danger" onclick="deleteTask()">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="3 6 5 6 21 6" />
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                </svg>
                Delete
            </button>
        </div>
    </div>

    <!-- Main Content -->
    <div class="task-content-layout">
        <!-- Main Column -->
        <div class="task-main-column">
            <!-- Description Section -->
            <div class="content-section">
                <div class="section-header-page">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                        <polyline points="14 2 14 8 20 8" />
                        <line x1="16" y1="13" x2="8" y2="13" />
                        <line x1="16" y1="17" x2="8" y2="17" />
                        <polyline points="10 9 9 9 8 9" />
                    </svg>
                    <h2>Description</h2>
                </div>
                <div class="description-content">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p>@Model.Description</p>
                    }
                    else
                    {
                        <p class="empty-description">No description added yet.</p>
                    }
                </div>
            </div>

            <!-- Activity Section -->
            <div class="content-section">
                <div class="section-header-page">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="22 12 18 12 15 21 9 3 6 12 2 12" />
                    </svg>
                    <h2>Activity</h2>
                </div>

                <!-- Add Comment -->
                <div class="add-comment-page">
                    <div class="user-avatar-page">U</div>
                    <div class="comment-form">
                        <textarea class="comment-textarea" placeholder="Write a comment..." rows="3"></textarea>
                        <button class="btn btn-primary">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="22" y1="2" x2="11" y2="13" />
                                <polygon points="22 2 15 22 11 13 2 9 22 2" />
                            </svg>
                            Comment
                        </button>
                    </div>
                </div>

                <!-- Activity Timeline -->
                <div class="activity-timeline-page">
                    @if (Model.Activities != null && Model.Activities.Any())
                    {
                        @foreach (var activity in Model.Activities)
                        {
                            <div class="timeline-item">
                                <div class="timeline-avatar">
                                    @activity.UserFullName.Substring(0, 1)
                                </div>
                                <div class="timeline-content">
                                    <div class="timeline-header">
                                        <strong>@activity.UserFullName</strong>
                                        <span class="timeline-time">@((DateTime.Now - activity.Timestamp).TotalHours < 24 ? (DateTime.Now - activity.Timestamp).Hours + "h ago" : activity.Timestamp.ToString("MMM dd, yyyy"))</span>
                                    </div>
                                    <p class="timeline-text">@activity.Action</p>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar Column -->
        <div class="task-sidebar-column">
            <!-- Assignees Card -->
            <div class="sidebar-card">
                <h3>Members</h3>
                <div class="assignees-grid">
                    @if (Model.Assignees != null && Model.Assignees.Any())
                    {
                        @foreach (var assignee in Model.Assignees)
                        {
                            <div class="assignee-card">
                                @if (!string.IsNullOrEmpty(assignee.AvatarUrl))
                                {
                                    <img src="@assignee.AvatarUrl" alt="@assignee.FullName" class="assignee-avatar-page" />
                                }
                                else
                                {
                                    <div class="assignee-avatar-page">@assignee.Initials</div>
                                }
                                <span>@assignee.FullName</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="empty-text">No members assigned</p>
                    }
                </div>
                <button class="btn-sidebar-action">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19" />
                        <line x1="5" y1="12" x2="19" y2="12" />
                    </svg>
                    Add Member
                </button>
            </div>

            <!-- Details Card -->
            <div class="sidebar-card">
                <h3>Details</h3>
                <div class="detail-row">
                    <span class="detail-label">Created</span>
                    <span class="detail-value">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Creator</span>
                    <span class="detail-value">@Model.CreatorName</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">List</span>
                    <span class="detail-value">@Model.ListName</span>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="sidebar-card">
                <h3>Actions</h3>
                <button class="btn-sidebar-action">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="9 18 15 12 9 6" />
                    </svg>
                    Move to List
                </button>
                <button class="btn-sidebar-action">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="9" y="9" width="13" height="13" rx="2" ry="2" />
                        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1" />
                    </svg>
                    Copy Task
                </button>
                <button class="btn-sidebar-action">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="21 8 21 21 3 21 3 8" />
                        <rect x="1" y="3" width="22" height="5" />
                        <line x1="10" y1="12" x2="14" y2="12" />
                    </svg>
                    Archive
                </button>
            </div>
        </div>
    </div>
</div>

<div id="task-details-modal-container"></div>

@section Scripts {
    <script>
        // Hàm gọi AJAX mở Modal Chi tiết
        function openTaskDetails(taskId) {
            // 1. Gọi API lấy HTML của Modal
            fetch(`/Tasks/GetDetails/${taskId}`)
                .then(response => {
                    if (!response.ok) throw new Error("Failed to load task details");
                    return response.text();
                })
                .then(html => {
                    // 2. Nhúng HTML vào div container
                    const container = document.getElementById('task-details-modal-container');
                    container.innerHTML = html;

                    // 3. Khởi tạo và hiển thị Bootstrap Modal
                    const modalElement = container.querySelector('.modal');
                    const bsModal = new bootstrap.Modal(modalElement);
                    bsModal.show();

                    // 4. Xử lý sự kiện khi đóng modal để dọn dẹp DOM (Optional)
                    modalElement.addEventListener('hidden.bs.modal', function () {
                        container.innerHTML = '';
                    });
                })
                .catch(error => console.error(error));
        }
    </script>
}
<style>
