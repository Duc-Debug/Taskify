@model IEnumerable<Taskify.Models.TaskDetailsViewModel>

@{
    ViewData["Title"] = "My Tasks";
}
 <!-- CSS Libraries -->
 @section Styles {
    <link rel="stylesheet" href="~/css/tasks.css" asp-append-version="true" />
}

<div class="mytasks-container">
    @{
        var currentFilter = ViewBag.CurrentFilter as string ?? "all";
        string filterLable = "Filter";
        switch (currentFilter)
        {
            case "today":
                filterLable = "Today";
                break;
            case "week":
                filterLable = "This Week";
                break;
            case "overdue":
                filterLable = "Overdue";
                break;
            default:
                filterLable = "Filter";
                break;
        }
    }
    <!-- Page Header -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-icon">
            </div>
            <div>
                <h1>My Tasks</h1>           
                <p>Manage and track your tasks efficiently</p>
            </div>
        </div>
        <div class="header-actions">
            <button class="btn btn-primary" onclick="openCreateTaskModal_Index()">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19"/>
                    <line x1="5" y1="12" x2="19" y2="12"/>
                </svg>
                Add Task
            </button>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"/>
                    </svg>
                    @filterLable
                </button>
               <ul class="dropdown-menu dropdown-menu-end">
            <li>
                <a class="dropdown-item @(currentFilter == "all" ? "active" : "")" href="?filter=all">All Tasks</a>
            </li>
            <li>
                <a class="dropdown-item @(currentFilter == "today" ? "active" : "")" href="?filter=today">Today</a>
            </li>
            <li>
                <a class="dropdown-item @(currentFilter == "week" ? "active" : "")" href="?filter=week">This Week</a>
            </li>
            <li>
                <a class="dropdown-item @(currentFilter == "overdue" ? "active" : "")" href="?filter=overdue">Overdue</a>
            </li>
        </ul>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card total">
            <div class="stat-icon">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 11 12 14 22 4"/>
                    <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
                </svg>
            </div>
            <div class="stat-content">
                <span class="stat-label">Total Tasks</span>
                <h3 class="stat-value">@ViewBag.TotalTasks</h3>
            </div>
        </div>

        <div class="stat-card completed">
            <div class="stat-icon">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                    <polyline points="22 4 12 14.01 9 11.01"/>
                </svg>
            </div>
            <div class="stat-content">
                <span class="stat-label">Completed</span>
                <h3 class="stat-value">@ViewBag.CompletedTasks</h3>
            </div>
        </div>

       <div class="stat-card in-progress">
        <div class="stat-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10" />
                <polyline points="12 6 12 12 16 14" />
            </svg>
        </div>
        <div class="stat-content">
            <span class="stat-label">In Progress</span>
            <h3 class="stat-value">@ViewBag.InProgressTasks</h3>
        </div>
    </div>

        <div class="stat-card overdue">
            <div class="stat-icon">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <line x1="12" y1="8" x2="12" y2="12"/>
                    <line x1="12" y1="16" x2="12.01" y2="16"/>
                </svg>
            </div>
            <div class="stat-content">
                <span class="stat-label">Overdue</span>
                <h3 class="stat-value">@ViewBag.OverdueTasks</h3>
            </div>
        </div>
    </div>

    <!-- Filters & Search Bar -->
   
           <div class="toolbar-card mb-4">
                <div class="toolbar-tabs">
                    <div class="nav nav-pills">
                        <button class="nav-link active" data-filter="all">
                            All Tasks <span class="tab-badge ms-2">@ViewBag.TotalTasks</span>
                        </button>
                        <button class="nav-link" data-filter="pending">
                            Pending <span class="tab-badge ms-2">@ViewBag.PendingTasks</span>
                        </button>
                        <button class="nav-link" data-filter="inprogress">
                            In Progress <span class="tab-badge ms-2">@ViewBag.InProgressTasks</span>
                        </button>
                        <button class="nav-link" data-filter="completed">
                            Completed <span class="tab-badge ms-2">@ViewBag.CompletedTasks</span>
                        </button>
                        <button class="nav-link" data-filter="overdue">
                            Overdue <span class="tab-badge ms-2 bg-danger text-white">@ViewBag.OverdueTasks</span>
                        </button>
                    </div>
                </div>
    
                 <div class="toolbar-actions">
            
                    <select class="sort-select" onchange="sortTasks(this.value)">
                        <option value="date-desc">Date (Newest)</option>
                        <option value="date-asc">Date (Oldest)</option>
                        <option value="priority-high">Priority (High to Low)</option>
                        <option value="priority-low">Priority (Low to High)</option>
                        <option value="name-asc">Name (A-Z)</option>
                        <option value="name-desc">Name (Z-A)</option>
                    </select>
                </div>
                <div class="common-search-box search-box">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="11" cy="11" r="8"/>
                            <path d="m21 21-4.35-4.35"/>
                        </svg>
                      <input type="text" id="taskSearchInput" placeholder="Search tasks..."/>
                    </div>
            </div>
  

      
    </div>

    <!-- Tasks List -->
    <div class="tab-content" id="taskTabsContent">
        <div class="tab-pane fade show active" id="all">
            <div class="tasks-list" id="tasksList">
                @if (Model != null && Model.Any())
                {
                    @foreach (var task in Model)
                    {
                            bool isOverdue = task.Status != Taskify.Models.TaskStatus.Completed
                                                            && task.DueDate.HasValue
                                                            &&task.DueDate.Value.Date < DateTime.Now.Date;
                        
                        <div class="task-item-wrapper @(task.Status == Taskify.Models.TaskStatus.Completed ? "opacity-50" : "")"
                             data-task-id="@task.Id"
                             data-priority="@((int)task.Priority)"
                             data-title="@task.Title.ToLower()"
                             data-status="@task.Status.ToString().ToLower()" 
                             data-overdue="@isOverdue.ToString().ToLower()">
         
                            <partial name="~/Views/Shared/_TaskCard.cshtml" model="@(new Taskify.Models.TaskCardViewModel { 
                                 Id = task.Id, 
                                 Title = task.Title, 
                                 Priority = task.Priority, 
                                 DueDate = task.DueDate,
                                 Assignees = task.Assignees,
                                 Status = task.Status, 
                            })" />
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-icon">
                            <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                <polyline points="9 11 12 14 22 4"/>
                                <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
                            </svg>
                        </div>
                        <h3>No tasks yet</h3>
                        <p>Create your first task to get started</p>
                        <button class="btn btn-primary btn-lg" onclick="openCreateTaskModal_Index()">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="12" y1="5" x2="12" y2="19"/>
                                <line x1="5" y1="12" x2="19" y2="12"/>
                            </svg>
                            Add Your First Task
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<partial name="_CreateModal" model="new Taskify.Models.TaskCreateViewModel()" />
<div id="task-details-modal-container"></div>
<div id="edit-task-modal-container"></div>
@section Scripts {
    <script>
        function filterTasks() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const tasks = document.querySelectorAll('.task-item-wrapper');

            tasks.forEach(task => {
                const text = task.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    task.style.display = '';
                } else {
                    task.style.display = 'none';
                }
            });
        }

        function sortTasks(sortBy) {
            const tasksList = document.getElementById('tasksList');
            const tasks = Array.from(document.querySelectorAll('.task-item-wrapper'));

            tasks.sort((a, b) => {
                switch(sortBy) {
                    case 'date-desc':
                        return new Date(b.dataset.createdDate) - new Date(a.dataset.createdDate);
                    case 'date-asc':
                        return new Date(a.dataset.createdDate) - new Date(b.dataset.createdDate);
                    case 'priority-high':
                        return parseInt(b.dataset.priority) - parseInt(a.dataset.priority);
                    case 'priority-low':
                        return parseInt(a.dataset.priority) - parseInt(b.dataset.priority);
                    case 'name-asc':
                        return a.dataset.title.localeCompare(b.dataset.title);
                    case 'name-desc':
                        return b.dataset.title.localeCompare(a.dataset.title);
                }
            });

            tasks.forEach(task => tasksList.appendChild(task));
        }
       
        document.addEventListener('DOMContentLoaded', function() {
        // Lấy tất cả nút filter
        const searchInput = document.getElementById('taskSearchInput');
        const filterBtns = document.querySelectorAll('[data-filter]');
        const taskItems = document.querySelectorAll('.task-item-wrapper');

        let currentFilter ='all';
        searchInput.addEventListener('input', function() {
            filterAndSearch();
        });
           
        filterBtns.forEach(btn => {
            btn.addEventListener('click', function(e) {
                // Nếu dùng thẻ <a> trong dropdown thì chặn chuyển trang
                if(this.tagName === 'A') e.preventDefault(); 

                // Update giao diện active (nếu cần)
                filterBtns.forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                // Update biến filter
                currentFilter = this.getAttribute('data-filter');
                
                // Gọi hàm lọc chung
                filterAndSearch();
            });
        });
        function filterAndSearch() {
            const searchTerm = searchInput.value.toLowerCase();

            taskItems.forEach(item => {
                // Lấy dữ liệu từ data attribute
               
                const title = item.getAttribute('data-title') || ''; 
                const status = item.getAttribute('data-status');
                const isOverdue = item.getAttribute('data-overdue') === 'true';

                // -- Logic 1: Check Search --
                const matchesSearch = title.includes(searchTerm);

                // -- Logic 2: Check Filter --
                let matchesFilter = false;
                if (currentFilter === 'all') {
                    matchesFilter = true;
                } else if (currentFilter === 'overdue') {
                    matchesFilter = isOverdue;
                } else {
                    matchesFilter = (status === currentFilter);
                }

                // -- Kết quyết: Phải thỏa mãn CẢ HAI --
                if (matchesSearch && matchesFilter) {
                    item.style.display = ''; // Hiện
                } else {
                    item.style.display = 'none'; // Ẩn
                }
            });
        }
    });
    function openTaskDetails(taskId) {
        fetch(`/Tasks/GetDetails/${taskId}`)
            .then(res => {
                if(!res.ok) throw new Error('Cannot load details');
                return res.text();
            })
            .then(html => {
                const container = document.getElementById('task-details-modal-container');
                container.innerHTML = html;
                const modal = new bootstrap.Modal(container.querySelector('.modal'));
                modal.show();
            })
            .catch(e => console.error(e));
    }

    // --- [MỚI] Hàm mở Modal Sửa Task ---
    function editTask(taskId) {
        fetch(`/Tasks/Edit/${taskId}`)
            .then(res => {
                if(!res.ok) throw new Error('Cannot load edit form');
                return res.text();
            })
            .then(html => {
                const container = document.getElementById('edit-task-modal-container');
                container.innerHTML = html;
                const modal = new bootstrap.Modal(container.querySelector('.modal'));
                modal.show();
            })
            .catch(e => console.error(e));
    }

    // --- Hàm Xóa Task (Nếu chưa có) ---
    function deleteTask(taskId) {
        if (!confirm('Are you sure you want to delete this task?')) return;
        fetch(`/Tasks/Delete/${taskId}`, { method: 'POST' })
            .then(response => {
                if (response.ok) location.reload();
                else alert("Cannot delete task.");
            });
    }
    function openCreateTaskModal(listId, boardId) {
    // Đảm bảo URL có tham số boardId
    $.get('/Tasks/Create?listId=' + listId + '&boardId=' + boardId, function(data) {
        $('#modal-container').html(data);
        $('#createTaskModal').modal('show');
        
        // Debug: Kiểm tra xem TeamId đã có chưa
        console.log("TeamId loaded:", $('#hiddenTeamId').val()); 
    });
}
    </script>
}

