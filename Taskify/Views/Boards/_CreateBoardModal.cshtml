<!-- Create Board Modal -->
<div class="modal fade" id="createBoardModal" tabindex="-1" aria-labelledby="createBoardModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <div class="modal-title-wrapper">
                    <div class="modal-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                            <line x1="9" y1="3" x2="9" y2="21" />
                        </svg>
                    </div>
                    <h5 id="createBoardModalLabel">Create New Board</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form id="createBoardForm" asp-action="Create" asp-controller="Boards" method="post">
                    <!-- Board Name -->
                    <div class="form-group">
                        <label for="boardName" class="form-label">
                            Board Name <span class="required">*</span>
                        </label>
                        <input type="text"
                               class="form-control"
                               id="boardName"
                               name="Name"
                               placeholder="e.g., Marketing Campaign 2024"
                               required
                               maxlength="100" />
                        <span class="form-text">Choose a descriptive name for your board</span>
                    </div>

                    <!-- Board Type -->
                    <div class="form-group">
                        <label class="form-label">Board Type</label>
                        <div class="board-type-options">
                            <div class="type-option">
                                <input type="radio"
                                       id="typePersonal"
                                       name="BoardType"
                                       value="personal"
                                       checked />
                                <label for="typePersonal" class="type-card">
                                    <div class="type-icon personal">
                                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                                            <circle cx="12" cy="7" r="4" />
                                        </svg>
                                    </div>
                                    <div class="type-info">
                                        <h6>Personal</h6>
                                        <p>Just for you</p>
                                    </div>
                                </label>
                            </div>

                            <div class="type-option">
                                <input type="radio"
                                       id="typeTeam"
                                       name="BoardType"
                                       value="team" />
                                <label for="typeTeam" class="type-card">
                                    <div class="type-icon team">
                                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                                            <circle cx="9" cy="7" r="4" />
                                            <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                                            <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                                        </svg>
                                    </div>
                                    <div class="type-info">
                                        <h6>Team</h6>
                                        <p>Collaborate with others</p>
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Team Selection (shown only when Team type is selected) -->
                    <div class="form-group" id="teamSelectionGroup" style="display: none;">
                        <label for="teamSelect" class="form-label">
                            Select Team <span class="required">*</span>
                        </label>
                        <select class="form-select" id="teamSelect" name="TeamId">
                            <option value="">Choose a team...</option>
                        </select>
                    </div>

                    <!-- Board Template (Optional) -->
                    <div class="form-group">
                        <label class="form-label">
                            Start with a template
                            <span class="badge-optional">Optional</span>
                        </label>
                        <div class="template-options">
                            <div class="template-item">
                                <input type="radio"
                                       id="templateBlank"
                                       name="Template"
                                       value="blank"
                                       checked />
                                <label for="templateBlank" class="template-card">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                                    </svg>
                                    <span>Blank Board</span>
                                </label>
                            </div>

                            <div class="template-item">
                                <input type="radio"
                                       id="templateKanban"
                                       name="Template"
                                       value="kanban" />
                                <label for="templateKanban" class="template-card">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="3" width="7" height="18" rx="1" />
                                        <rect x="14" y="3" width="7" height="10" rx="1" />
                                    </svg>
                                    <span>Kanban</span>
                                </label>
                            </div>

                            <div class="template-item">
                                <input type="radio"
                                       id="templateScrum"
                                       name="Template"
                                       value="scrum" />
                                <label for="templateScrum" class="template-card">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        <path d="M9 12l2 2 4-4" />
                                    </svg>
                                    <span>Scrum</span>
                                </label>
                            </div>
                        </div>
                        <span class="form-text">Templates include pre-configured lists and workflows</span>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="createBoardForm" class="btn btn-primary">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12" />
                    </svg>
                    Create Board
                </button>
            </div>
        </div>
    </div>
</div>

