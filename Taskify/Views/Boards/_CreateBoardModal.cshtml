<script>
    // Show/hide team selection based on board type
    document.querySelectorAll('input[name="BoardType"]').forEach(radio => {
        radio.addEventListener('change', function() {
            const teamGroup = document.getElementById('teamSelectionGroup');
            const teamSelect = document.getElementById('teamSelect');

            if (this.value === 'team') {
                teamGroup.style.display = 'block';
                teamSelect.required = true;

                // Gọi API lấy danh sách team nếu chưa có
                if (teamSelect.options.length <= 1) {
                    fetch('/Boards/GetUserTeams')
                        .then(response => response.json())
                        .then(data => {
                            data.forEach(team => {
                                const option = document.createElement('option');
                                option.value = team.id;
                                option.textContent = team.name;
                                teamSelect.appendChild(option);
                            });
                        });
                }
            } else {
                teamGroup.style.display = 'none';
                teamSelect.required = false;
                teamSelect.value = ""; // Reset giá trị team
            }
        });
    });

    //Đoạn từ đây có thể xóa
    // Reset form when modal is closed
    document.getElementById('createBoardModal').addEventListener('hidden.bs.modal', function() {
        document.getElementById('createBoardForm').reset();
        document.getElementById('teamSelectionGroup').style.display = 'none';
    });

    // Form validation and submission
    document.getElementById('createBoardForm').addEventListener('submit', function(e) {
        e.preventDefault();

        const formData = new FormData(this);
        const data = Object.fromEntries(formData.entries());

        // Add validation logic here
        if (!data.Name || data.Name.trim() === '') {
            alert('Please enter a board name');
            return;
        }

        if (data.BoardType === 'team' && !data.TeamId) {
            alert('Please select a team');
            return;
        }

        // Submit the form
        this.submit();
    });
</script>