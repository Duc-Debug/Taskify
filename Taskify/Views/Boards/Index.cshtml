@model List<Taskify.Models.BoardViewModel>
@{
    ViewData["Title"] = "My Boards";
    var boards = Model ?? new List<BoardViewModel>();//Tranh lỗi trang nếu null
}
<!-- CSS Libraries -->
@section Styles {
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/boards.css" asp-append-version="true" />
}

<div class="boards-container">
    <!-- Page Header -->
    <div class="page-header d-flex align-items-center justify-content-between mb-4">
        <div class="header-content">
            <h1>My Boards</h1>
            <p class="text-muted">Organize your tasks with visual boards</p>
        </div>
        <button class="btn btn-primary ms-auto" data-bs-toggle="modal" data-bs-target="#createBoardModal">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19" />
                <line x1="5" y1="12" x2="19" y2="12" />
            </svg>
            Create New Board
        </button>
    </div>

    <!-- Filter Tabs -->
    <div class="filter-tabs">
        <button class="tab-btn active" data-filter="all">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                <line x1="9" y1="3" x2="9" y2="21" />
            </svg>
            All Boards
            <span class="tab-count">@boards.Count</span>
        </button>
        <button class="tab-btn" data-filter="personal">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                <circle cx="12" cy="7" r="4" />
            </svg>
            Personal
            <span class="tab-count">@boards.Count(b => b.TeamId == Guid.Empty)</span>
        </button>
        <button class="tab-btn" data-filter="team">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                <circle cx="9" cy="7" r="4" />
                <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                <path d="M16 3.13a4 4 0 0 1 0 7.75" />
            </svg>
            Team Boards
            <span class="tab-count">@boards.Count(b => b.TeamId != Guid.Empty)</span>
        </button>
    </div>

    <!-- Search Bar -->
    <div class="search-section">
        <div class="common-search-box">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8" />
                <path d="m21 21-4.35-4.35" />
            </svg>
            <input type="text" id="searchInput" placeholder="Search boards..." />
        </div>
    </div>

    <!-- Boards Grid -->
    @if (boards.Any())
    {
        <div class="boards-grid" id="boardsGrid">
            @foreach (var board in boards)
            {
                <div class="board-card" data-board-id="@board.Id" data-filter="@(board.TeamId == Guid.Empty ? "personal" : "team")">
                    <a asp-action="Details" asp-route-id="@board.Id" class="board-link">
                        <!-- Board Header -->
                        <div class="board-card-header">
                            <div class="board-icon">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                                    <line x1="9" y1="3" x2="9" y2="21" />
                                </svg>
                            </div>
                            <div class="board-menu dropdown">
                                <button class="btn-menu" type="button" data-bs-toggle="dropdown" aria-expanded="false"
                                        onclick="event.preventDefault(); event.stopPropagation();">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <circle cx="12" cy="12" r="1" />
                                        <circle cx="12" cy="5" r="1" />
                                        <circle cx="12" cy="19" r="1" />
                                    </svg>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <button class="dropdown-item" type="button"
                                                onclick="event.preventDefault(); event.stopPropagation(); openEditBoardModal('@board.Id', '@board.Name')">
                                            <i class="bi bi-pencil me-2"></i>Edit Board
                                        </button>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-action="Delete" asp-route-id="@board.Id" method="post"
                                              onclick="event.stopPropagation();"
                                              style="display: block; width: 100%;">

                                            <button type="submit" class="dropdown-item text-danger"
                                                    onclick="return confirm('Are you sure you want to delete this board?');">
                                                <i class="bi bi-trash me-2"></i>Delete Board
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <!-- Board Title -->
                        <h3 class="board-title">@board.Name</h3>

                        <!-- Board Stats -->
                        <div class="board-stats">
                            <div class="stat-item">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M9 11H3v7a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7h-6" />
                                    <polyline points="22 6 12 1 2 6" />
                                    <line x1="12" y1="1" x2="12" y2="11" />
                                </svg>
                                <span>@board.Lists.Count Lists</span>
                            </div>
                            <div class="stat-item">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <polyline points="9 11 12 14 22 4" />
                                    <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" />
                                </svg>
                                <span>@board.Lists.Sum(l => l.Tasks.Count) Tasks</span>
                            </div>
                        </div>

                        <!-- Board Members -->
                        @* @if (board.TeamMembers != null && board.TeamMembers.Any())
                        {
                            <div class="board-members">
                                @foreach (var member in board.TeamMembers.Take(4))
                                {
                                    @if (!string.IsNullOrEmpty(member.AvatarUrl))
                                    {
                                        <img src="@member.AvatarUrl" alt="@member.FullName" class="member-avatar" title="@member.FullName" />
                                    }
                                    else
                                    {
                                        <div class="member-avatar" title="@member.FullName">
                                            @(string.IsNullOrEmpty(member.AvatarUrl) ? member.Initials : "")
                                            @if (!string.IsNullOrEmpty(member.AvatarUrl))
                                            {
                                                <img src="@member.AvatarUrl" alt="@member.FullName" />
                                            }
                                        </div>
                                    }

                                }
                                @if (board.TeamMembers.Count > 4)
                                {
                                    <div class="member-avatar more">+@(board.TeamMembers.Count - 4)</div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="board-type-badge">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                                    <circle cx="12" cy="7" r="4" />
                                </svg>
                                Personal Board
                            </div>
                        } *@
                        @if (board.TeamId != Guid.Empty)
                        {
                            <div class="board-type-badge" style="background: #e0f2fe; color: #0369a1;">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                                    <circle cx="9" cy="7" r="4" />
                                    <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                                </svg>
                                @(board.TeamName ?? "Team Board")
                            </div>
                        }
                        else
                        {
                            <div class="board-type-badge">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                                    <circle cx="12" cy="7" r="4" />
                                </svg>
                                Personal Board
                            </div>
                        }
                        <!-- Board Footer -->
                        <div class="board-footer">
                            <span class="last-updated">Updated recently</span>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-icon">
                <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                    <line x1="9" y1="3" x2="9" y2="21" />
                </svg>
            </div>
            <h3>No boards yet</h3>
            <p>Create your first board to start organizing your tasks</p>
            <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#createBoardModal">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19" />
                    <line x1="5" y1="12" x2="19" y2="12" />
                </svg>
                Create Your First Board
            </button>
        </div>
    }
</div>

<!-- Create Board Modal -->
<partial name="_CreateBoardModal" model="new Taskify.Models.BoardCreateViewModel() "/>
<partial name="_EditBoardModal" model="new Taskify.Models.BoardEditViewModel()" />

@section Scripts {
    <script>
        // Filter tabs
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const filter = this.dataset.filter;

                // Update active state
                document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                // Filter boards
                const boards = document.querySelectorAll('.board-card');
                boards.forEach(board => {
                    if (filter === 'all' || board.dataset.filter === filter) {
                        board.style.display = 'block';
                    } else {
                        board.style.display = 'none';
                    }
                });
            });
        });

        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const boards = document.querySelectorAll('.board-card');

            boards.forEach(board => {
                const title = board.querySelector('.board-title').textContent.toLowerCase();
                if (title.includes(searchTerm)) {
                    board.style.display = 'block';
                } else {
                    board.style.display = 'none';
                }
            });
        });

        function showBoardMenu(boardId) {
