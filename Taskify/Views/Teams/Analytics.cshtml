@model Taskify.Models.TeamAnalyticsViewModel
@{
    ViewData["Title"] = $"Analytics: {Model.TeamName}";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
@section Styles {
    <link rel="stylesheet" href="~/css/analytics.css" asp-append-version="true" />
}
<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="analytics-header mb-4">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
            <div>
                <div class="d-flex align-items-center gap-2 mb-2">
                    <div class="icon-wrapper">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h1 class="page-title mb-0">Team Analytics</h1>
                </div>
                <p class="page-subtitle mb-0">Performance insights for <span class="team-name">@Model.TeamName</span></p>
            </div>
            <a asp-action="Details" asp-route-id="@Model.TeamId" class="btn btn-back">
                <i class="fas fa-arrow-left me-2"></i>Back to Team
            </a>
        </div>
    </div>

    <div class="row g-4">
        <!-- Left Column: Stats Cards & Chart -->
        <div class="col-lg-4">
            <!-- Stats Cards Grid -->
            <div class="row g-3 mb-4">
                <!-- Total Tasks Card -->
                <div class="col-6">
                    <div class="stat-card stat-card-primary">
                        <div class="stat-icon">
                            <i class="fas fa-tasks"></i>
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <polyline points="9 11 12 14 22 4" />
                                <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" />
                            </svg>
                        </div>
                        <div class="stat-content">
                            <div class="stat-number">@Model.TotalTasks</div>
                            <div class="stat-label">Total Tasks</div>
                        </div>
                    </div>
                </div>

                <!-- Completed Tasks Card -->
                <div class="col-6">
                    <div class="stat-card stat-card-success">
                        <div class="stat-icon">
                            <i class="fas fa-check-circle"></i>
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                                <polyline points="22 4 12 14.01 9 11.01" />
                            </svg>
                        </div>
                        <div class="stat-content">
                            <div class="stat-number">@Model.CompletedTasks</div>
                            <div class="stat-label">Completed</div>
                        </div>
                    </div>
                </div>

                <!-- Pending Tasks Card -->
                <div class="col-6">
                    <div class="stat-card stat-card-warning">
                        <div class="stat-icon">
                            <i class="fas fa-clock"></i>
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10" />
                                <polyline points="12 6 12 12 16 14" />
                            </svg>
                        </div>
                        <div class="stat-content">
                            <div class="stat-number">@Model.PendingTask</div>
                            <div class="stat-label">In Progress</div>
                        </div>
                    </div>
                </div>

                <!-- Overdue Tasks Card -->
                <div class="col-6">
                    <div class="stat-card stat-card-danger">
                        <div class="stat-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10" />
                                <line x1="12" y1="8" x2="12" y2="12" />
                                <line x1="12" y1="16" x2="12.01" y2="16" />
                            </svg>
                        </div>
                        <div class="stat-content">
                            <div class="stat-number">@Model.OverdueTasks</div>
                            <div class="stat-label">Overdue</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Completion Rate Chart -->
            <div class="card chart-card">
                <div class="card-body">
                    <h5 class="chart-title">Completion Rate</h5>
                    <div class="chart-wrapper">
                        <canvas id="teamChart"></canvas>
                    </div>
                    <div class="chart-summary mt-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted small">Overall Progress</span>
                            <span class="fw-bold fs-5 text-gradient">
                                @(Model.TotalTasks > 0 ? Math.Round((double)Model.CompletedTasks / Model.TotalTasks * 100, 1) : 0)%
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Team Members Table -->
        <div class="col-lg-8">
            <div class="card members-card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-header-title">
                            <i class="fas fa-users me-2"></i>Team Members Performance
                        </h5>
                        <span class="badge badge-count">@Model.MemberStats.Count members</span>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table members-table">
                        <thead>
                            <tr>
                                <th>Member</th>
                                <th class="text-center">Progress</th>
                                <th class="text-center">Completed</th>
                                <th class="text-center">Overdue</th>
                                <th class="text-end">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in Model.MemberStats)
                            {
                                <tr class="member-row">
                                    <td>
                                        <div class="member-info">
                                            <div class="member-avatar">
                                                <img src="@(string.IsNullOrEmpty(member.AvatarUrl) ? "/images/default-avatar.png" : member.AvatarUrl)"
                                                     alt="@member.FullName">
                                                @if (member.CompletionRate >= 80)
                                                {
                                                    <span class="avatar-badge badge-success">
                                                        <i class="fas fa-star"></i>
                                                    </span>
                                                }
                                            </div>
                                            <div class="member-details">
                                                <div class="member-name">@member.FullName</div>
                                                <div class="member-role">@member.JobTitle</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td style="width: 30%">
                                        <div class="progress-wrapper">
                                            <span class="progress-percentage">@member.CompletionRate%</span>
                                            <div class="progress progress-modern">
                                                <div class="progress-bar @(member.CompletionRate >= 80 ? "bg-success" : member.CompletionRate >= 50 ? "bg-primary" : "bg-warning")"
                                                     style="width: @member.CompletionRate%">
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="count-badge badge-completed">
                                            <i class="fas fa-check-circle me-1"></i>@member.CompletedCount
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        @if (member.OverdueCount > 0)
                                        {
                                            <span class="count-badge badge-overdue">
                                                <i class="fas fa-exclamation-circle me-1"></i>@member.OverdueCount
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="count-badge badge-none">—</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @if ((Model.CurrentUserRole ==TeamRole.Owner || Model.CurrentUserRole == TeamRole.Admin) && member.OverdueCount > 0)
                                        {
                                            <button class="btn btn-remind"
                                                    onclick="showRemindModal('@member.UserId', '@member.FullName', '@member.OverdueCount')">
                                                <i class="fas fa-bell me-1"></i> Remind
                                            </button>
                                        }
                                        else if (member.IsIdle)
                                        {
                                            <span class="status-badge badge-idle">
                                                <i class="fas fa-coffee me-1"></i> Available
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="status-badge badge-active">
                                                <i class="fas fa-check me-1"></i> On Track
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 border-0">
                    <h5 class="fw-bold mb-0 text-danger">
                        <i class="fas fa-fire me-2"></i>Urgent Action Needed (Overdue & Upcoming)
                    </h5>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Task Name</th>
                                <th>Deadline</th>
                                <th>Status</th>
                                <th>Assignees</th>
                                <th class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var task in Model.AttentionTasks)
                            {
                                <tr>
                                    <td class="fw-bold">@task.TaskName</td>
                                    <td>
                                        @if (task.IsOverdue)
                                        {
                                            <span class="badge bg-danger">Quá hạn</span>
                                            <small class="text-muted d-block">@task.DueDate.ToString("dd/MM")</small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Sắp đến</span>
                                            <small class="text-muted d-block">@task.DueDate.ToString("dd/MM")</small>
                                        }
                                    </td>
                                    <td><span class="badge bg-light text-dark border">@task.Status</span></td>
                                    <td>
                                        <div class="d-flex">
                                            @foreach (var assignee in task.Assignees)
                                            {
                                                <img src="@(assignee.AvatarUrl ?? "/images/default-avatar.png")"
                                                     title="@assignee.FullName"
                                                     class="rounded-circle border border-white" width="30" height="30"
                                                     style="margin-right: -10px;">
                                            }
                                        </div>
                                    </td>
                                    <td class="text-end">
                                        @if (Model.CurrentUserRole == TeamRole.Owner|| Model.CurrentUserRole == TeamRole.Admin)
                                        {
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-danger dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    <i class="fas fa-bell"></i> Remind
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    @foreach (var assignee in task.Assignees)
                                                    {
                                                        <li>
                                                            <a class="dropdown-item" href="javascript:void(0)"
                                                               onclick="sendTaskReminder('@assignee.UserId', '@task.TaskId', '@task.TaskName')">
                                                                Remind <strong>@assignee.FullName</strong>
                                                            </a>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">View Only</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (!Model.AttentionTasks.Any())
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="fas fa-check-circle text-success fa-2x mb-2"></i>
                            <p>Không có task nào cần chú ý gấp. Good job!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Performance Insights (Optional Enhancement) -->
    <div class="row g-4 mt-2">
        <div class="col-12">
            <div class="card insights-card">
                <div class="card-body">
                    <h5 class="insights-title">
                        <i class="fas fa-lightbulb me-2"></i>Performance Insights
                    </h5>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="insight-item">
                                <div class="insight-icon insight-icon-success">
                                    <i class="fas fa-trophy"></i>
                                </div>
                                <div class="insight-content">
                                    <div class="insight-label">Top Performer</div>
                                    <div class="insight-value">
                                        @{
                                            var topPerformer = Model.MemberStats.OrderByDescending(m => m.CompletionRate).FirstOrDefault();
                                        }
                                        @(topPerformer?.FullName ?? "N/A")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="insight-item">
                                <div class="insight-icon insight-icon-info">
                                    <i class="fas fa-chart-line"></i>
                                </div>
                                <div class="insight-content">
                                    <div class="insight-label">Average Completion</div>
                                    <div class="insight-value">
                                        @(Model.MemberStats.Any() ? Math.Round(Model.MemberStats.Average(m => m.CompletionRate), 1) : 0)%
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="insight-item">
                                <div class="insight-icon insight-icon-warning">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="insight-content">
                                    <div class="insight-label">Members Needing Support</div>
                                    <div class="insight-value">
                                        @Model.MemberStats.Count(m => m.OverdueCount > 0)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Remind Modal -->
<div class="modal fade" id="remindModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">
                    <i class="fas fa-bell text-warning me-2"></i>Send Reminder
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Send a reminder notification to <strong id="memberName"></strong> about <strong id="overdueCount"></strong> overdue task(s).</p>
                <textarea class="form-control" rows="3" placeholder="Add a personal message (optional)..."></textarea>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="sendReminderRequest()">
                    <i class="fas fa-paper-plane me-2"></i>Send Reminder
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    // Initialize Chart
    const ctx = document.getElementById('teamChart').getContext('2d');
    const teamChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Completed', 'In Progress', 'Overdue'],
            datasets: [{
                data: [@Model.CompletedTasks, @Model.PendingTask, @Model.OverdueTasks],
                backgroundColor: [
                    '#10b981', // Green
                    '#3b82f6', // Blue
                    '#ef4444'  // Red
                ],
                borderWidth: 0,
                hoverOffset: 8
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: true,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        padding: 15,
                        font: {
                            size: 12,
                            family: "'Inter', sans-serif"
                        },
                        usePointStyle: true,
                        pointStyle: 'circle'
                    }
                },
                tooltip: {
                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                    padding: 12,
                    cornerRadius: 8,
                    titleFont: {
                        size: 14,
                        weight: '600'
                    },
                    bodyFont: {
                        size: 13
                    },
                    callbacks: {
                        label: function(context) {
                            const total = context.dataset.data.reduce((a, b) => a + b, 0);
                            const percentage = ((context.parsed / total) * 100).toFixed(1);
                            return context.label + ': ' + context.parsed + ' (' + percentage + '%)';
                        }
                    }
                }
            },
            cutout: '70%'
        }
    });

    // Show Remind Modal
    function showRemindModal(memberName, overdueCount) {
        document.getElementById('memberName').textContent = memberName;
        document.getElementById('overdueCount').textContent = overdueCount;
        const modal = new bootstrap.Modal(document.getElementById('remindModal'));
        modal.show();
    }

    // Send Reminder
    function sendReminderRequest(targetUserId, referenceId, referenceName, type) {
        // Hiển thị Toast loading giả lập (Optional)
        // showToast('Sending reminder...', 'info');

        $.ajax({
            url: '/Teams/SendReminder',
            type: 'POST',
            data: {
                targetUserId: targetUserId,
                referenceId: referenceId,   // Guid (TeamId hoặc TaskId)
                referenceName: referenceName,
                type: type // "Team" hoặc "Task"
            },
            success: function (response) {
                if (response.success) {
                    showToast(response.message, 'success');
                } else {
                    showToast(response.message, 'error'); // Hiện lỗi (Spam, Unauthorized...)
                }
            },
            error: function () {
                showToast('Lỗi kết nối đến Server.', 'error');
            }
        });
    }

    // 1. Gọi từ bảng thành viên (Team Remind) - Nút cũ
    // referenceId = TeamId (Guid) lấy từ Model
    function showRemindModal(userId, memberName, overdueCount) {
        // Logic cũ của bạn dùng Modal -> Giờ ta chuyển sang gửi trực tiếp cho nhanh
        // Hoặc nếu muốn giữ Modal thì nút "Send" trong Modal sẽ gọi hàm này:
        if(confirm(`Gửi thông báo nhắc nhở đến ${memberName}?`)) {
             sendReminderRequest(userId, '@Model.TeamId', '@Model.TeamName', 'Team');
        }
    }

    // 2. Gọi từ bảng Task (Task Remind) - Nút mới
    function sendTaskReminder(userId, taskId, taskName) {
        // taskId là Guid
        sendReminderRequest(userId, taskId, taskName, 'Task');
    }

    // --- Toast Notification Logic (Giữ nguyên style đẹp của bạn) ---
    function showToast(message, type) {
        // ... (Code toast cũ) ...
        // Tạo element div, add class toast-success/error, append body...
        // Để đơn giản tôi viết lại bản rút gọn ở đây:
        const color = type === 'success' ? '#10b981' : '#ef4444';
        const icon = type === 'success' ? 'check-circle' : 'exclamation-circle';

        const toastHtml = `
            <div style="position: fixed; top: 20px; right: 20px; z-index: 9999; background: white; padding: 15px 20px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.1); border-left: 4px solid ${color}; display: flex; align-items: center; gap: 10px; animation: slideIn 0.3s ease;">
                <i class="fas fa-${icon}" style="color: ${color}"></i>
                <span style="font-weight: 500; color: #374151;">${message}</span>
            </div>
        `;
        const div = document.createElement('div');
        div.innerHTML = toastHtml;
        document.body.appendChild(div);
        setTimeout(() => div.remove(), 3000);
    }
    // Animate numbers on load
    document.addEventListener('DOMContentLoaded', function() {
        const statNumbers = document.querySelectorAll('.stat-number');
        statNumbers.forEach(num => {
            const target = parseInt(num.textContent);
            let current = 0;
            const increment = target / 30;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    num.textContent = target;
                    clearInterval(timer);
                } else {
                    num.textContent = Math.floor(current);
                }
            }, 30);
        });
    });
</script>