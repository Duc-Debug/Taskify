@model Taskify.Models.TeamCreateViewModel

<!-- Create Team Modal -->
<div class="modal fade" id="createTeamModal" tabindex="-1" aria-labelledby="createTeamModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content create-team-modal">
            <!-- Modal Header -->
            <div class="modal-header">
                <div class="modal-title-wrapper">
                    <div class="modal-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                            <circle cx="9" cy="7" r="4" />
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                            <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                        </svg>
                    </div>
                    <h5 id="createTeamModalLabel">Create New Team</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form id="createTeamForm" asp-action="Create" asp-controller="Teams" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Team Name -->
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">
                            Team Name <span class="required">*</span>
                        </label>
                        <input asp-for="Name"
                               class="form-control form-control-lg"
                               placeholder="e.g., Marketing Team, Development Squad"
                               autofocus
                               required
                               maxlength="100" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <span class="form-text">Choose a clear, descriptive name for your team</span>
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label asp-for="Description" class="form-label">
                            Description
                            <span class="badge-optional">Optional</span>
                        </label>
                        <textarea asp-for="Description"
                                  class="form-control"
                                  rows="4"
                                  placeholder="What is this team working on? What are the goals and objectives?"></textarea>
                        <span class="form-text">Help members understand the team's purpose and goals</span>
                    </div>

                    <!-- Team Settings -->
                    <div class="form-group">
                        <label class="form-label">Team Settings</label>

                        <div class="settings-options">
                            <!-- Private Team Setting -->
                            <div class="setting-item">
                                <div class="setting-info">
                                    <div class="setting-icon">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h4>Private Team</h4>
                                        <p>Only invited members can see and join this team</p>
                                    </div>
                                </div>
                                <label class="toggle-switch">
                                    @* <input type="checkbox" asp-for="IsPrivate" checked /> *@
                                    <span class="toggle-slider"></span>
                                </label>
                            </div>

                            <!-- Guest Access Setting -->
                            <div class="setting-item">
                                <div class="setting-info">
                                    <div class="setting-icon">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <rect x="2" y="7" width="20" height="14" rx="2" ry="2" />
                                            <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h4>Allow Guest Access</h4>
                                        <p>Members can invite guests to specific boards</p>
                                    </div>
                                </div>
                                <label class="toggle-switch">
                                   @*  <input type="checkbox" asp-for="AllowGuestAccess" /> *@
                                    <span class="toggle-slider"></span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Start Guide -->
                    <div class="quick-start-box">
                        <div class="quick-start-icon">🚀</div>
                        <div class="quick-start-content">
                            <h4>Quick Start Guide</h4>
                            <p>After creating your team, you can:</p>
                            <ul>
                                <li>Invite team members via email</li>
                                <li>Create boards for your projects</li>
                                <li>Set up team workflows and processes</li>
                                <li>Customize team settings and permissions</li>
                            </ul>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="18" y1="6" x2="6" y2="18" />
                        <line x1="6" y1="6" x2="18" y2="18" />
                    </svg>
                    <span>Cancel</span>
                </button>
                <button type="submit" form="createTeamForm" class="btn btn-primary">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="20 6 9 17 4 12" />
                    </svg>
                    <span>Create Team</span>
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    (function() {
        const modal = document.getElementById('createTeamModal');
        const form = document.getElementById('createTeamForm');

        if (modal && form) {
            // Reset form when modal closes
            modal.addEventListener('hidden.bs.modal', function() {
                form.reset();
                // Clear validation messages
                const validationMessages = form.querySelectorAll('.text-danger');
                validationMessages.forEach(msg => msg.textContent = '');
                // Remove validation classes
                const inputs = form.querySelectorAll('.form-control');
                inputs.forEach(input => {
                    input.classList.remove('is-invalid', 'is-valid');
                });
            });

            // Handle form submission
            form.addEventListener('submit', function(e) {
                const submitBtn = form.querySelector('.btn-primary');
                if (submitBtn) {
                    submitBtn.classList.add('loading');
                    submitBtn.disabled = true;
                }
            });

            // Auto-focus first input when modal opens
            modal.addEventListener('shown.bs.modal', function() {
                const firstInput = form.querySelector('input[type="text"]');
                if (firstInput) {
                    firstInput.focus();
                }
            });
        }
    })();
</script>