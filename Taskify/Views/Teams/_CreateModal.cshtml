@model Taskify.Models.TeamCreateViewModel

<!-- Create Team Modal -->
<div class="modal fade" id="createTeamModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content create-team-modal">
            <!-- Modal Header -->
            <div class="modal-header">
                <div class="modal-title-wrapper">
                    <div class="modal-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                            <circle cx="9" cy="7" r="4" />
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                            <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                        </svg>
                    </div>
                    <h5>Create New Team</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form id="createTeamForm" asp-action="Create" asp-controller="Teams" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Team Name -->
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">
                            Team Name <span class="required">*</span>
                        </label>
                        <input asp-for="Name"
                               class="form-control form-control-lg"
                               placeholder="e.g., Marketing Team, Development Squad"
                               autofocus
                               required
                               maxlength="100" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <span class="form-text">Choose a clear, descriptive name for your team</span>
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label asp-for="Description" class="form-label">
                            Description
                            <span class="badge-optional">Optional</span>
                        </label>
                        <textarea asp-for="Description"
                                  class="form-control"
                                  rows="4"
                                  placeholder="What is this team working on?"></textarea>
                        <span class="form-text">Help members understand the team's purpose and goals</span>
                    </div>

                    <!-- Team Settings -->
                    <div class="form-group">
                        <label class="form-label">Team Settings</label>

                        <div class="settings-options">
                            <div class="setting-item">
                                <div class="setting-info">
                                    <div class="setting-icon">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h4>Private Team</h4>
                                        <p>Only invited members can see and join this team</p>
                                    </div>
                                </div>
                                <label class="toggle-switch">
                                   @*  <input type="checkbox" asp-for="IsPrivate" checked /> *@
                                    <span class="toggle-slider"></span>
                                </label>
                            </div>

                            <div class="setting-item">
                                <div class="setting-info">
                                    <div class="setting-icon">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="2" y="7" width="20" height="14" rx="2" ry="2" />
                                            <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h4>Allow Guest Access</h4>
                                        <p>Members can invite guests to specific boards</p>
                                    </div>
                                </div>
                                <label class="toggle-switch">
                                  @*   <input type="checkbox" asp-for="AllowGuestAccess" /> *@
                                    <span class="toggle-slider"></span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Start -->
                    <div class="quick-start-box">
                        <div class="quick-start-icon">🚀</div>
                        <div class="quick-start-content">
                            <h4>Quick Start</h4>
                            <p>After creating your team, you can:</p>
                            <ul>
                                <li>Invite team members via email</li>
                                <li>Create boards for your projects</li>
                                <li>Set up team workflows</li>
                            </ul>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="createTeamForm" class="btn btn-primary">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12" />
                    </svg>
                    Create Team
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .create-team-modal {
        border: none;
        border-radius: 16px;
    }

    .modal-header {
        border-bottom: 1px solid #e2e8f0;
        padding: 20px 24px;
    }

    .modal-title-wrapper {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .modal-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #0ea5e9 0%, #8b5cf6 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .modal-header h5 {
        font-size: 18px;
        font-weight: 700;
        color: #1e293b;
        margin: 0;
    }

    .modal-body {
        padding: 24px;
        max-height: calc(100vh - 250px);
        overflow-y: auto;
    }

    /* Form Groups */
    .form-group {
        margin-bottom: 24px;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .required {
        color: #ef4444;
    }

    .badge-optional {
        background: #f1f5f9;
        color: #64748b;
        padding: 2px 8px;
        border-radius: 6px;
        font-size: 11px;
        font-weight: 600;
        margin-left: 8px;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        font-size: 14px;
        transition: all 0.3s;
    }

    .form-control-lg {
        padding: 14px 16px;
        font-size: 16px;
        font-weight: 600;
    }

    .form-control:focus {
        outline: none;
        border-color: #0ea5e9;
        box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
    }

    .form-text {
        display: block;
        color: #94a3b8;
        font-size: 12px;
        margin-top: 6px;
    }

    textarea.form-control {
        resize: vertical;
        font-family: inherit;
    }

    /* Settings Options */
    .settings-options {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .setting-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
        padding: 16px;
        background: #f8fafc;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        transition: all 0.2s;
    }

        .setting-item:hover {
            border-color: #cbd5e1;
        }

    .setting-info {
        display: flex;
        align-items: flex-start;
        gap: 12px;
        flex: 1;
    }

    .setting-icon {
        width: 40px;
        height: 40px;
        background: white;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #0ea5e9;
        flex-shrink: 0;
    }

    .setting-info h4 {
        font-size: 14px;
        font-weight: 600;
        color: #1e293b;
        margin: 0 0 4px 0;
    }

    .setting-info p {
        font-size: 12px;
        color: #64748b;
        margin: 0;
        line-height: 1.4;
    }

    /* Toggle Switch */
    .toggle-switch {
        position: relative;
        display: inline-block;
        width: 48px;
        height: 26px;
        flex-shrink: 0;
    }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .toggle-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #cbd5e1;
        border-radius: 34px;
        transition: 0.3s;
    }

        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 20px;
            width: 20px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            border-radius: 50%;
            transition: 0.3s;
        }

    input:checked + .toggle-slider {
        background: linear-gradient(135deg, #0ea5e9 0%, #8b5cf6 100%);
    }

        input:checked + .toggle-slider:before {
            transform: translateX(22px);
        }

    /* Quick Start Box */
    .quick-start-box {
        display: flex;
        gap: 16px;
        padding: 20px;
        background: linear-gradient(135deg, rgba(14, 165, 233, 0.05) 0%, rgba(139, 92, 246, 0.05) 100%);
        border-left: 3px solid #0ea5e9;
        border-radius: 12px;
        margin-top: 24px;
    }

    .quick-start-icon {
        font-size: 28px;
        flex-shrink: 0;
    }

    .quick-start-content h4 {
        font-size: 15px;
        font-weight: 600;
        color: #1e293b;
        margin: 0 0 8px 0;
    }

    .quick-start-content p {
        font-size: 13px;
        color: #64748b;
        margin: 0 0 8px 0;
    }

    .quick-start-content ul {
        margin: 0;
        padding-left: 20px;
        list-style: none;
    }

    .quick-start-content li {
        font-size: 13px;
        color: #64748b;
        line-height: 1.8;
        position: relative;
    }

        .quick-start-content li::before {
            content: "✓";
            position: absolute;
            left: -20px;
            color: #0ea5e9;
            font-weight: 600;
        }

    /* Modal Footer */
    .modal-footer {
        border-top: 1px solid #e2e8f0;
        padding: 16px 24px;
        display: flex;
        gap: 12px;
        justify-content: flex-end;
    }

    /* Buttons */
    .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        border: none;
        border-radius: 10px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-primary {
        background: linear-gradient(135deg, #0ea5e9 0%, #8b5cf6 100%);
        color: white;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(14, 165, 233, 0.4);
        }

    .btn-secondary {
        background: #f1f5f9;
        color: #64748b;
    }

        .btn-secondary:hover {
            background: #e2e8f0;
        }

    .alert {
        padding: 12px 16px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .alert-danger {
        background-color: #fee;
        color: #c53030;
        border: 1px solid #feb2b2;
    }

    .text-danger {
        color: #ef4444;
        font-size: 12px;
        display: block;
        margin-top: 4px;
    }

    @@media (max-width: 576px) {
        .modal-body {
            padding: 20px;
        }

        .setting-item {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>

<script>
    // Reset form when modal closes
    document.getElementById('createTeamModal')?.addEventListener('hidden.bs.modal', function() {
        document.getElementById('createTeamForm').reset();
    });
</script>