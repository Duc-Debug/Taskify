@model Taskify.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}
<style>
    .dashboard-container {
        max-width: 1400px;
        margin: 0 auto;
    }

    /* Welcome Section */
    .welcome-section {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 32px;
        padding: 32px;
        background: linear-gradient(135deg, #0ea5e9 0%, #8b5cf6 100%);
        border-radius: 20px;
        color: white;
    }

    .welcome-content h1 {
        font-size: 32px;
        font-weight: 700;
        margin: 0 0 8px 0;
        color: white;
    }

    .welcome-content p {
        font-size: 16px;
        margin: 0;
        opacity: 0.95;
    }

    .welcome-actions {
        display: flex;
        gap: 12px;
    }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 20px;
        margin-bottom: 32px;
    }

    .stat-card {
        background: white;
        border-radius: 16px;
        padding: 24px;
        display: flex;
        gap: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
        transition: all 0.3s;
    }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
        }

    .stat-icon {
        width: 56px;
        height: 56px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        color: white;
    }

        .stat-icon.total {
            background: linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%);
        }

        .stat-icon.pending {
            background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
        }

        .stat-icon.completed {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }

        .stat-icon.rate {
            background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%);
        }

    .stat-content {
        flex: 1;
    }

    .stat-label {
        font-size: 14px;
        color: #64748b;
        margin: 0 0 8px 0;
        font-weight: 500;
    }

    .stat-value {
        font-size: 32px;
        font-weight: 700;
        color: #1e293b;
        margin: 0 0 8px 0;
        line-height: 1;
    }

    .stat-change {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        font-size: 13px;
        font-weight: 600;
        padding: 4px 8px;
        border-radius: 6px;
    }

        .stat-change.positive {
            background: #d1fae5;
            color: #059669;
        }

        .stat-change.neutral {
            background: #f1f5f9;
            color: #64748b;
        }

    .progress-bar {
        width: 100%;
        height: 6px;
        background: #e2e8f0;
        border-radius: 3px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #8b5cf6 0%, #a855f7 100%);
        border-radius: 3px;
        transition: width 0.5s ease;
    }

    /* Content Grid */
    .content-grid {
        display: grid;
        grid-template-columns: 1fr 400px;
        gap: 24px;
    }

    @@media (max-width: 1200px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Section Card */
    .section-card {
        background: white;
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
        margin-bottom: 24px;
    }

    .section-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 20px;
    }

        .section-header h2 {
            font-size: 18px;
            font-weight: 700;
            color: #1e293b;
            margin: 0;
        }

    .btn-link {
        display: flex;
        align-items: center;
        gap: 4px;
        color: #0ea5e9;
        text-decoration: none;
        font-size: 14px;
        font-weight: 600;
        transition: all 0.2s;
    }

        .btn-link:hover {
            gap: 8px;
        }

    /* Teams List */
    .teams-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .team-item {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 16px;
        background: #f8fafc;
        border-radius: 12px;
        transition: all 0.2s;
    }

        .team-item:hover {
            background: #f1f5f9;
        }

    .team-icon {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #0ea5e9 0%, #8b5cf6 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        flex-shrink: 0;
    }

    .team-info {
        flex: 1;
    }

        .team-info h4 {
            font-size: 15px;
            font-weight: 600;
            color: #1e293b;
            margin: 0 0 4px 0;
        }

        .team-info p {
            font-size: 13px;
            color: #64748b;
            margin: 0;
        }

    .btn-team-action {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: white;
        border-radius: 8px;
        color: #64748b;
        text-decoration: none;
        transition: all 0.2s;
    }

        .btn-team-action:hover {
            background: #e2e8f0;
            color: #0ea5e9;
        }

    /* Activity List */
    .activity-list {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .activity-item {
        display: flex;
        gap: 12px;
    }

    .activity-icon {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        flex-shrink: 0;
    }

        .activity-icon.completed {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }

        .activity-icon.assigned {
            background: linear-gradient(135deg, #0ea5e9 0%, #06b6d4 100%);
        }

        .activity-icon.comment {
            background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);
        }

        .activity-icon.created {
            background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%);
        }

    .activity-content {
        flex: 1;
    }

        .activity-content p {
            font-size: 14px;
            color: #475569;
            margin: 0 0 4px 0;
            line-height: 1.5;
        }

        .activity-content strong {
            color: #1e293b;
            font-weight: 600;
        }

    .activity-time {
        font-size: 12px;
        color: #94a3b8;
    }

    /* Boards List */
    .boards-list {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .team-boards-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .team-name {
        font-size: 13px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin: 0 0 8px 0;
    }

    .board-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px;
        background: #f8fafc;
        border-radius: 10px;
        text-decoration: none;
        transition: all 0.2s;
    }

        .board-item:hover {
            background: #f1f5f9;
            transform: translateX(4px);
        }

    .board-item-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #0ea5e9 0%, #8b5cf6 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        flex-shrink: 0;
    }

    .board-item-info {
        flex: 1;
    }

        .board-item-info h4 {
            font-size: 14px;
            font-weight: 600;
            color: #1e293b;
            margin: 0 0 2px 0;
        }

        .board-item-info p {
            font-size: 12px;
            color: #94a3b8;
            margin: 0;
        }

    .board-item svg {
        color: #cbd5e1;
    }

    .board-item:hover svg {
        color: #0ea5e9;
    }

    /* Empty State */
    .empty-state-small {
        text-align: center;
        padding: 40px 20px;
    }

        .empty-state-small svg {
            color: #cbd5e1;
            margin-bottom: 16px;
        }

        .empty-state-small p {
            font-size: 14px;
            color: #64748b;
            margin: 0 0 16px 0;
        }

    /* Buttons */
    .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        border: none;
        border-radius: 10px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #0ea5e9 0%, #8b5cf6 100%);
        color: white;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(14, 165, 233, 0.4);
        }

    .btn-secondary {
        background: white;
        color: #0ea5e9;
    }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.9);
        }

    .btn-sm {
        padding: 8px 16px;
        font-size: 13px;
    }

    @@media (max-width: 768px) {
        .welcome-section {
            flex-direction: column;
            align-items: flex-start;
            gap: 20px;
        }

        .stats-grid {
            grid-template-columns: 1fr;
        }

        .welcome-actions {
            width: 100%;
        }

            .welcome-actions .btn {
                flex: 1;
            }
    }
</style>
<div class="dashboard-container">
    <!-- Welcome Header -->
    <div class="welcome-section">
        <div class="welcome-content">
            <h1>Welcome back! 👋</h1>
            <p>Here's what's happening with your tasks today</p>
        </div>
        <div class="welcome-actions">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createBoardModal">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                    <line x1="9" y1="3" x2="9" y2="21" />
                </svg>
                New Board
            </button>
            <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#quickAddModal">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19" />
                    <line x1="5" y1="12" x2="19" y2="12" />
                </svg>
                Quick Add Task
            </button>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <!-- Total Tasks -->
        <div class="stat-card">
            <div class="stat-icon total">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 11 12 14 22 4" />
                    <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Total Tasks</p>
                <h3 class="stat-value">@Model.TotalAssignedTasks</h3>
                <span class="stat-change positive">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="18 15 12 9 6 15" />
                    </svg>
                    12% from last week
                </span>
            </div>
        </div>

        <!-- Pending Tasks -->
        <div class="stat-card">
            <div class="stat-icon pending">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10" />
                    <polyline points="12 6 12 12 16 14" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Pending</p>
                <h3 class="stat-value">@Model.PendingTasks</h3>
                <span class="stat-change neutral">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="5" y1="12" x2="19" y2="12" />
                    </svg>
                    No change
                </span>
            </div>
        </div>

        <!-- Completed Tasks -->
        <div class="stat-card">
            <div class="stat-icon completed">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                    <polyline points="22 4 12 14.01 9 11.01" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Completed</p>
                <h3 class="stat-value">@Model.CompletedTasks</h3>
                <span class="stat-change positive">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="18 15 12 9 6 15" />
                    </svg>
                    8% increase
                </span>
            </div>
        </div>

        <!-- Completion Rate -->
        <div class="stat-card">
            <div class="stat-icon rate">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="2" x2="12" y2="6" />
                    <line x1="12" y1="18" x2="12" y2="22" />
                    <line x1="4.93" y1="4.93" x2="7.76" y2="7.76" />
                    <line x1="16.24" y1="16.24" x2="19.07" y2="19.07" />
                    <line x1="2" y1="12" x2="6" y2="12" />
                    <line x1="18" y1="12" x2="22" y2="12" />
                    <line x1="4.93" y1="19.07" x2="7.76" y2="16.24" />
                    <line x1="16.24" y1="7.76" x2="19.07" y2="4.93" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Completion Rate</p>
                <h3 class="stat-value">@((Model.TotalAssignedTasks > 0 ? (Model.CompletedTasks * 100 / Model.TotalAssignedTasks) : 0).ToString("F0"))%</h3>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: @((Model.TotalAssignedTasks > 0 ? (Model.CompletedTasks * 100 / Model.TotalAssignedTasks) : 0).ToString("F0"))%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Left Column: My Teams & Recent Activity -->
        <div class="left-column">
            <!-- My Teams -->
            <div class="section-card">
                <div class="section-header">
                    <h2>My Teams</h2>
                    <a asp-controller="Teams" asp-action="Index" class="btn-link">
                        View All
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="9 18 15 12 9 6" />
                        </svg>
                    </a>
                </div>

                @if (Model.MyTeams != null && Model.MyTeams.Any())
                {
                    <div class="teams-list">
                        @foreach (var team in Model.MyTeams.Take(5))
                        {
                            <div class="team-item">
                                <div class="team-icon">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                                        <circle cx="9" cy="7" r="4" />
                                        <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                                        <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                                    </svg>
                                </div>
                                <div class="team-info">
                                    <h4>@team.Name</h4>
                                    <p>@team.MemberCount members • @team.Boards.Count boards</p>
                                </div>
                                <a asp-controller="Teams" asp-action="Details" asp-route-id="@team.Id" class="btn-team-action">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="9 18 15 12 9 6" />
                                    </svg>
                                </a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state-small">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                            <circle cx="9" cy="7" r="4" />
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                            <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                        </svg>
                        <p>No teams yet</p>
                        <a asp-controller="Teams" asp-action="Create" class="btn btn-sm btn-primary">Create Team</a>
                    </div>
                }
            </div>

            <!-- Recent Activity -->
            <div class="section-card">
                <div class="section-header">
                    <h2>Recent Activity</h2>
                </div>

                <div class="activity-list">
                    @if(Model.RecentActivities !=null && Model.RecentActivities.Any())
                    {
                        @foreach(var activity in Model.RecentActivities)
                        {
                            <div class="activity-item">
                                <div class="activity-icon @activity.Type">
                                    @if(activity.Type == "completed")
                                    {
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <polyline points="20 6 9 17 4 12"/>
                                        </svg>
                                    }
                                    else if (activity.Type== "assigned")
                                    {
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                                            <circle cx="8.5" cy="7" r="4"/>
                                            <polyline points="17 11 19 13 23 9"/>
                                        </svg>
                                    }
                                    else if(activity.Type == "created")
                                    {
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <line x1="12" y1="5" x2="12" y2="19"/>    
                                        <line x1="5" y1="12" x2="19" y2="12"/>    
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                                        </svg>
                                    }
                                </div>
                                <div class="activity-content">
                                    <p>@Html.Raw(activity.Description)</p>
                                    <span class="activity-time">@activity.TimeAgo</span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3 text-muted">
                            <small>No recent activity</small>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column: My Boards -->
        <div class="right-column">
            <div class="section-card">
                <div class="section-header">
                    <h2>My Boards</h2>
                    <a asp-controller="Boards" asp-action="Index" class="btn-link">
                        View All
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="9 18 15 12 9 6" />
                        </svg>
                    </a>
                </div>

                @if ((Model.PersonalBoards != null && Model.PersonalBoards.Any()) ||
                                (Model.MyTeams != null && Model.MyTeams.Any(t => t.Boards.Any())))
                {
                    <div class="boards-list">

                        @if (Model.PersonalBoards != null && Model.PersonalBoards.Any())
                        {
                            <div class="team-boards-group mb-3">
                                <h5 class="team-name text-primary">Personal Boards</h5>
                                @foreach (var board in Model.PersonalBoards.Take(3))
                                {
                                    <a asp-controller="Boards" asp-action="Details" asp-route-id="@board.Id" class="board-item">
                                        <div class="board-item-icon" style="background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                                                <line x1="9" y1="3" x2="9" y2="21" />
                                            </svg>
                                        </div>
                                        <div class="board-item-info">
                                            <h4>@board.Name</h4>
                                            <p>Personal Workspace</p>
                                        </div>
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <polyline points="9 18 15 12 9 6" />
                                        </svg>
                                    </a>
                                }
                            </div>
                        }

                        @if (Model.MyTeams != null)
                        {
                            @foreach (var team in Model.MyTeams)
                            {
                                @if (team.Boards.Any())
                                {
                                    <div class="team-boards-group">
                                        <h5 class="team-name">@team.Name</h5>
                                        @foreach (var board in team.Boards.Take(3))
                                        {
                                            <a asp-controller="Boards" asp-action="Details" asp-route-id="@board.Id" class="board-item">
                                                <div class="board-item-icon">
                                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                                                        <line x1="9" y1="3" x2="9" y2="21" />
                                                    </svg>
                                                </div>
                                                <div class="board-item-info">
                                                    <h4>@board.Name</h4>
                                                    <p>Team Board</p>
                                                </div>
                                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <polyline points="9 18 15 12 9 6" />
                                                </svg>
                                            </a>
                                        }
                                    </div>
                                }
                            }
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state-small">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                            <line x1="9" y1="3" x2="9" y2="21" />
                        </svg>
                        <p>No boards yet</p>
                        <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#createBoardModal">
                            Create Board
                        </button>
                    </div>
