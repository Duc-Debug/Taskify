@model Taskify.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/boards.css" asp-append-version="true" />


<div class="dashboard-container">
    <!-- Welcome Header -->
    <div class="welcome-section">
        <div class="welcome-content">
            <h1>Welcome back! 👋</h1>
            <p>Here's what's happening with your tasks today</p>
        </div>
        <div class="welcome-actions">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createBoardModal">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                    <line x1="9" y1="3" x2="9" y2="21" />
                </svg>
                <span>New Board</span>
            </button>
            <a asp-controller="Boards" asp-action="CreateWithAi" class="btn btn-primary bg-gradient shadow-sm">
                <i class="fas fa-magic me-2"></i>AI Architect
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <!-- Total Tasks -->
        <div class="stat-card app-card">
            <div class="stat-icon total">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="9 11 12 14 22 4" />
                    <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Total Tasks</p>
                <h3 class="stat-value">@Model.TotalAssignedTasks</h3>
                <span class="stat-change positive">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="18 15 12 9 6 15" />
                    </svg>
                    @* 12% from last week *@
                </span>
            </div>
        </div>

        <!-- In Progress Tasks -->
        <div class="stat-card app-card">
            <div class="stat-icon pending">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10" />
                    <polyline points="12 6 12 12 16 14" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">In Progress</p>
                <h3 class="stat-value">@Model.PendingTasks</h3>
                <span class="stat-change neutral">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="5" y1="12" x2="19" y2="12" />
                    </svg>
                    No change
                </span>
            </div>
        </div>

        <!-- Completed Tasks -->
        <div class="stat-card app-card">
            <div class="stat-icon completed">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                    <polyline points="22 4 12 14.01 9 11.01" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Completed</p>
                <h3 class="stat-value">@Model.CompletedTasks</h3>
                <span class="stat-change positive">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="18 15 12 9 6 15" />
                    </svg>
                    8% increase
                </span>
            </div>
        </div>

        <!-- Completion Rate -->
        <div class="stat-card app-card">
            <div class="stat-icon rate">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="12" y1="2" x2="12" y2="6" />
                    <line x1="12" y1="18" x2="12" y2="22" />
                    <line x1="4.93" y1="4.93" x2="7.76" y2="7.76" />
                    <line x1="16.24" y1="16.24" x2="19.07" y2="19.07" />
                    <line x1="2" y1="12" x2="6" y2="12" />
                    <line x1="18" y1="12" x2="22" y2="12" />
                    <line x1="4.93" y1="19.07" x2="7.76" y2="16.24" />
                    <line x1="16.24" y1="7.76" x2="19.07" y2="4.93" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Completion Rate</p>
                <h3 class="stat-value">@((Model.TotalAssignedTasks > 0 ? (Model.CompletedTasks * 100 / Model.TotalAssignedTasks) : 0).ToString("F0"))%</h3>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: @((Model.TotalAssignedTasks > 0 ? (Model.CompletedTasks * 100 / Model.TotalAssignedTasks) : 0).ToString("F0"))%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Left Column: My Teams & Recent Activity -->
        <div class="left-column">
            <!-- My Teams -->
            <div class="section-card app-card">
                <div class="section-header">
                    <h2>My Teams</h2>
                    <a asp-controller="Teams" asp-action="Index" class="btn-link">
                        <span>View All</span>
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="9 18 15 12 9 6" />
                        </svg>
                    </a>
                </div>

                @if (Model.MyTeams != null && Model.MyTeams.Any())
                {
                    <div class="teams-list">
                        @foreach (var team in Model.MyTeams.Take(5))
                        {
                            <div class="team-item">
                                <div class="team-icon">
                                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                                        <circle cx="9" cy="7" r="4" />
                                        <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                                        <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                                    </svg>
                                </div>
                                <div class="team-info">
                                    <h4>@team.Name</h4>
                                    <p>@team.MemberCount members • @team.Boards.Count boards</p>
                                </div>
                                <a asp-controller="Teams" asp-action="Details" asp-route-id="@team.Id" class="btn-team-action" title="View team details">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <polyline points="9 18 15 12 9 6" />
                                    </svg>
                                </a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state-small">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                            <circle cx="9" cy="7" r="4" />
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                            <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                        </svg>
                        <p>No teams yet. Create your first team to collaborate!</p>
                        <a asp-controller="Teams" asp-action="Create" class="btn btn-sm btn-primary">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <line x1="12" y1="5" x2="12" y2="19" />
                                <line x1="5" y1="12" x2="19" y2="12" />
                            </svg>
                            <span>Create Team</span>
                        </a>
                    </div>
                }
            </div>

            <!-- Recent Activity -->
            <div class="section-card app-card">
                <div class="section-header">
                    <h2>Recent Activity</h2>
                </div>

                @if (Model.RecentActivities != null && Model.RecentActivities.Any())
                {
                    <div class="activity-list">
                        @foreach (var activity in Model.RecentActivities)
                        {
                            <div class="activity-item">
                                <div class="activity-icon @activity.Type">
                                    @if (activity.Type == "completed")
                                    {
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <polyline points="20 6 9 17 4 12" />
                                        </svg>
                                    }
                                    else if (activity.Type == "assigned")
                                    {
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                                            <circle cx="8.5" cy="7" r="4" />
                                            <polyline points="17 11 19 13 23 9" />
                                        </svg>
                                    }
                                    else if (activity.Type == "created")
                                    {
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <line x1="12" y1="5" x2="12" y2="19" />
                                            <line x1="5" y1="12" x2="19" y2="12" />
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />
                                        </svg>
                                    }
                                </div>
                                <div class="activity-content">
                                    <p>@Html.Raw(activity.Description)</p>
                                    <span class="activity-time">@activity.TimeAgo</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state-small">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10" />
                            <line x1="12" y1="8" x2="12" y2="12" />
                            <line x1="12" y1="16" x2="12.01" y2="16" />
                        </svg>
                        <p>No recent activity. Start working on tasks!</p>
                    </div>
                }
            </div>
        </div>

        <!-- Right Column: My Boards -->
        <div class="right-column">
            <div class="section-card app-card">
                <div class="section-header">
                    <h2>My Boards</h2>
                    <a asp-controller="Boards" asp-action="Index" class="btn-link">
                        <span>View All</span>
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="9 18 15 12 9 6" />
                        </svg>
                    </a>
                </div>

                @if ((Model.PersonalBoards != null && Model.PersonalBoards.Any()) ||
                                (Model.MyTeams != null && Model.MyTeams.Any(t => t.Boards.Any())))
                {
                    <div class="boards-list">
                        @if (Model.PersonalBoards != null && Model.PersonalBoards.Any())
                        {
                            <div class="team-boards-group">
                                <h5 class="team-name">Personal Boards</h5>
                                @foreach (var board in Model.PersonalBoards.Take(3))
                                {
                                    <a asp-controller="Boards" asp-action="Details" asp-route-id="@board.Id" class="board-item">
                                        <div class="board-item-icon" style="background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);">
                                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                                                <line x1="9" y1="3" x2="9" y2="21" />
                                            </svg>
                                        </div>
                                        <div class="board-item-info">
                                            <h4>@board.Name</h4>
                                            <p>Personal Workspace</p>
                                        </div>
                                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <polyline points="9 18 15 12 9 6" />
                                        </svg>
                                    </a>
                                }
                            </div>
                        }

                        @if (Model.MyTeams != null)
                        {
                            @foreach (var team in Model.MyTeams)
                            {
                                @if (team.Boards.Any())
                                {
                                    <div class="team-boards-group">
                                        <h5 class="team-name">@team.Name</h5>
                                        @foreach (var board in team.Boards.Take(3))
                                        {
                                            <a asp-controller="Boards" asp-action="Details" asp-route-id="@board.Id" class="board-item">
                                                <div class="board-item-icon">
                                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                                                        <line x1="9" y1="3" x2="9" y2="21" />
                                                    </svg>
                                                </div>
                                                <div class="board-item-info">
                                                    <h4>@board.Name</h4>
                                                    <p>Team Board</p>
                                                </div>
                                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <polyline points="9 18 15 12 9 6" />
                                                </svg>
                                            </a>
                                        }
                                    </div>
                                }
                            }
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state-small">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                            <line x1="9" y1="3" x2="9" y2="21" />
                        </svg>
                        <p>No boards yet. Create your first board to get started!</p>
                        <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#createBoardModal">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <line x1="12" y1="5" x2="12" y2="19" />
                                <line x1="5" y1="12" x2="19" y2="12" />
                            </svg>
                            <span>Create Board</span>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modals -->
<partial name="~/Views/Boards/_CreateBoardModal.cshtml" />

<script>
    // Add smooth animations on page load
    document.addEventListener('DOMContentLoaded', function() {
        // Animate stats cards
        const statCards = document.querySelectorAll('.stat-card');
        statCards.forEach((card, index) => {
            setTimeout(() => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'all 0.5s ease';

                setTimeout(() => {
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 50);
            }, index * 100);
        });

        // Animate progress bars
        const progressFills = document.querySelectorAll('.progress-fill');
        progressFills.forEach(fill => {
            const width = fill.style.width;
            fill.style.width = '0';
            setTimeout(() => {
                fill.style.width = width;
            }, 500);
        });

        // Add hover effect to activity items
        const activityItems = document.querySelectorAll('.activity-item');
        activityItems.forEach(item => {
            item.addEventListener('mouseenter', function() {
                this.style.transition = 'transform 0.2s ease';
            });
        });
    });
</script>