@using Taskify.Models
@model List<Taskify.Models.NotificationViewModel>

<div class="notification-container">
    <div class="notification-header">
        <h3>Notifications</h3>
        <button class="btn-mark-read" onclick="markAllAsRead()">
            Mark all as read
        </button>
    </div>

    <div class="notification-list">
        @if (Model != null && Model.Any())
        {
            @foreach (var notification in Model)
            {
                <div class="notification-item @(!notification.IsRead ? "unread" : "")" data-id="@notification.Id">

                    <div class="notification-icon">
                        @if (notification.Type == NotificationType.TeamInvite)
                        {
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#0d6efd" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                            </svg>
                        }
                        else if (notification.Message.Contains("assigned"))
                        {
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                                <circle cx="8.5" cy="7" r="4" />
                                <polyline points="17 11 19 13 23 9" />
                            </svg>
                        }
                        else
                        {
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10" />
                                <path d="M12 16v-4" />
                                <path d="M12 8h.01" />
                            </svg>
                        }
                    </div>

                    <div class="notification-content">
                        <p class="notification-message">@notification.Message</p>
                        <span class="notification-time">@GetTimeAgo(notification.CreatedAt)</span>

                        @if (notification.Type == NotificationType.TeamInvite)
                        {
                            <div class="mt-2 d-flex gap-2">
                                <button class="btn btn-sm btn-primary py-1 px-3"
                                        onclick="respondInvite('@notification.Id', true, this)">
                                    Accept
                                </button>
                                <button class="btn btn-sm btn-outline-secondary py-1 px-3"
                                        onclick="respondInvite('@notification.Id', false, this)">
                                    Decline
                                </button>
                            </div>
                        }
                    </div>

                    @if (!notification.IsRead)
                    {
                        <div class="unread-indicator"></div>
                    }

                    @if (notification.Type != NotificationType.TeamInvite)
                    {
                        <button class="btn-notification-action" onclick="markAsRead('@notification.Id')">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="20 6 9 17 4 12" />
                            </svg>
                        </button>
                    }
                    @if (notification.Type == Taskify.Models.NotificationType.ApprovalRequest)
                    {
                        <div class="mt-2">
                            <button class="btn btn-sm btn-success"
                                    onclick="respondApproval('@notification.Id', true)">
                                Duyệt
                            </button>
                            <button class="btn btn-sm btn-danger"
                                    onclick="respondApproval('@notification.Id', false)">
                                Từ chối
                            </button>
                        </div>
                    }
                   
                    <form asp-controller="Notification" asp-action="Delete" asp-route-id="@notification.Id" method="post" class="position-absolute top-0 end-0 mt-2 me-2">
                        <button type="submit" onclick="event.stopPropagation();" class="btn btn-link" title="Delete">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <line x1="18" y1="6" x2="6" y2="18" />
                                <line x1="6" y1="6" x2="18" y2="18" />
                            </svg>
                        </button>
                    </form>
                </div>
               
            }
        }
        else
        {
            <div class="notification-empty">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9" />
                    <path d="M13.73 21a2 2 0 0 1-3.46 0" />
                </svg>
                <p>No notifications yet</p>
            </div>
        }
    </div>

    <div class="notification-footer">
        @if(Model != null && Model.Any(n => n.IsRead))
        {
            <form asp-action="ClearRead" asp-controller="Notification" asp-route-id="@Model" method="post" onsubmit="return confirm('Are you sure to remove all notification?');" class="btn-view-all">
                <button type="submit" class="btn btn-view-all text-decoration-none small fw-bold py-1 hover-danger w-100">Remove Read Notification</button>
            </form>
        }
    </div>
</div>

@functions {
    string GetTimeAgo(DateTime dateTime)
    {
        var timeSpan = DateTime.UtcNow - dateTime;
        if (timeSpan.TotalMinutes < 1) return "Just now";
        if (timeSpan.TotalMinutes < 60) return $"{(int)timeSpan.TotalMinutes}m ago";
        if (timeSpan.TotalHours < 24) return $"{(int)timeSpan.TotalHours}h ago";
        return dateTime.ToString("MMM dd");
    }
}

<script>
    // --- Hàm xử lý Mời vào Team ---
    function respondInvite(notificationId, isAccepted, btnElement) {
        // 1. Disable nút để tránh bấm nhiều lần
        const container = btnElement.closest('.mt-2');
        const buttons = container.querySelectorAll('button');
        buttons.forEach(b => b.disabled = true);

        // 2. Gọi xuống Controller: TeamsController > RespondInvite
        // Lưu ý: Đảm bảo notificationId có dấu nháy đơn '' bao quanh vì nó là GUID string
        $.post('/Teams/RespondInvite', { notificationId: notificationId, isAccepted: isAccepted })
            .done(function(response) {
                // Thành công -> Load lại trang để vào Team mới hoặc ẩn thông báo
                location.reload();
            })
            .fail(function(xhr) {
                // Thất bại -> Hiện lỗi
                alert("Lỗi: " + (xhr.responseText || "Không thể xử lý yêu cầu."));
                buttons.forEach(b => b.disabled = false);
            });
    }

    // --- Các hàm cũ giữ nguyên ---
    function markAsRead(notificationId) {
        fetch(`/Notifications/MarkAsRead/${notificationId}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        })
        .then(response => {
            if (response.ok) {
                const item = document.querySelector(`[data-id="${notificationId}"]`);
                if (item) {
                    item.classList.remove('unread');
                    const indicator = item.querySelector('.unread-indicator');
                    if (indicator) indicator.remove();
                    updateBadgeCount();
                }
            }
        });
    }

    function markAllAsRead() {
        fetch('/Notifications/MarkAllAsRead', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        })
        .then(response => {
            if (response.ok) {
                document.querySelectorAll('.notification-item.unread').forEach(item => {
                    item.classList.remove('unread');
                    const indicator = item.querySelector('.unread-indicator');
                    if (indicator) indicator.remove();
                });
                updateBadgeCount();
            }
        });
    }

    function updateBadgeCount() {
        const badge = document.querySelector('.notification-btn .badge');
        if (badge) {
            const unreadCount = document.querySelectorAll('.notification-item.unread').length;
            badge.style.display = unreadCount === 0 ? 'none' : 'block';
            badge.textContent = unreadCount;
        }
    }
    function respondApproval(notifId, isApproved) {
        fetch('/Notification/RespondToApproval', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: `notificationId=${notifId}&isApproved=${isApproved}`
        })
        .then(res => {
            if (res.ok) {
                // Xóa thông báo khỏi list sau khi bấm
                location.reload();
            } else {
                alert("Lỗi!");
            }
        });
    }
</script>