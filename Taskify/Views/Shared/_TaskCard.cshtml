<style>
    .create-task-modal {
        border: none;
        border-radius: 16px;
    }

    .modal-header {
        border-bottom: 1px solid #e2e8f0;
        padding: 20px 24px;
    }

    .modal-title-wrapper {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .modal-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #0ea5e9 0%, #8b5cf6 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .modal-header h5 {
        font-size: 18px;
        font-weight: 700;
        color: #1e293b;
        margin: 0;
    }

    .modal-body {
        padding: 24px;
    }

    /* Form Groups */
    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .required {
        color: #ef4444;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        font-size: 14px;
        transition: all 0.3s;
    }

    .form-control-lg {
        padding: 14px 16px;
        font-size: 16px;
        font-weight: 600;
    }

    .form-control:focus {
        outline: none;
        border-color: #0ea5e9;
        box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
    }

    .form-text {
        display: block;
        color: #94a3b8;
        font-size: 12px;
        margin-top: 6px;
    }

    textarea.form-control {
        resize: vertical;
        font-family: inherit;
    }

    /* Form Row */
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
    }

    /* Priority Options */
    .priority-options {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 8px;
    }

        .priority-options input[type="radio"] {
            position: absolute;
            opacity: 0;
            pointer-events: none;
        }

    .priority-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 6px;
        padding: 12px 8px;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 13px;
        font-weight: 600;
        text-align: center;
    }

        .priority-card:hover {
            border-color: #cbd5e1;
            background: #f8fafc;
        }

        .priority-card svg {
            color: #64748b;
        }

    /* Priority Colors */
    input[type="radio"]:checked + .priority-card.low {
        border-color: #10b981;
        background: #d1fae5;
        color: #059669;
    }

        input[type="radio"]:checked + .priority-card.low svg {
            color: #059669;
        }

    input[type="radio"]:checked + .priority-card.medium {
        border-color: #f59e0b;
        background: #fef3c7;
        color: #d97706;
    }

        input[type="radio"]:checked + .priority-card.medium svg {
            color: #d97706;
        }

    input[type="radio"]:checked + .priority-card.high {
        border-color: #ef4444;
        background: #fee;
        color: #dc2626;
    }

        input[type="radio"]:checked + .priority-card.high svg {
            color: #dc2626;
        }

    /* Members Select */
    .members-select {
        border: 2px dashed #e2e8f0;
        border-radius: 10px;
        padding: 12px;
        min-height: 60px;
    }

    .selected-members {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    .btn-select-member {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 8px 12px;
        background: #f1f5f9;
        border: none;
        border-radius: 8px;
        color: #64748b;
        font-size: 13px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

        .btn-select-member:hover {
            background: #e2e8f0;
            color: #0ea5e9;
        }

    .member-chip {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 6px 12px;
        background: linear-gradient(135deg, rgba(14, 165, 233, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
        border: 1px solid #cbd5e1;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
        color: #0ea5e9;
    }

        .member-chip button {
            background: none;
            border: none;
            color: #64748b;
            cursor: pointer;
            padding: 2px;
            display: flex;
            transition: all 0.2s;
        }

            .member-chip button:hover {
                color: #ef4444;
            }

    /* Quick Tips */
    .quick-tips {
        display: flex;
        gap: 12px;
        padding: 16px;
        background: #fef3c7;
        border-left: 3px solid #f59e0b;
        border-radius: 10px;
        margin-top: 20px;
    }

    .tip-icon {
        font-size: 20px;
        flex-shrink: 0;
    }

    .tip-content {
        flex: 1;
        font-size: 13px;
        color: #92400e;
        line-height: 1.5;
    }

        .tip-content strong {
            font-weight: 600;
            color: #78350f;
        }

    /* Modal Footer */
    .modal-footer {
        border-top: 1px solid #e2e8f0;
        padding: 16px 24px;
        display: flex;
        gap: 12px;
        justify-content: flex-end;
    }

    /* Buttons */
    .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        border: none;
        border-radius: 10px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-primary {
        background: linear-gradient(135deg, #0ea5e9 0%, #8b5cf6 100%);
        color: white;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(14, 165, 233, 0.4);
        }

    .btn-secondary {
        background: #f1f5f9;
        color: #64748b;
    }

        .btn-secondary:hover {
            background: #e2e8f0;
        }

    .text-danger {
        color: #ef4444;
        font-size: 12px;
        display: block;
        margin-top: 4px;
    }

    @@media (max-width: 576px) {
        .form-row {
            grid-template-columns: 1fr;
        }

        .priority-options {
            grid-template-columns: 1fr;
        }
    }
</style>

<script>
    function openMemberPicker() {
        // Show member picker modal or dropdown
        alert('Member picker would open here');
    }

    // Reset form when modal closes
    document.getElementById('createTaskModal')?.addEventListener('hidden.bs.modal', function() {
        document.getElementById('createTaskForm').reset();
    });
</script>