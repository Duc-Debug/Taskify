@model Taskify.Models.TaskCardViewModel

<div class="task-card" data-task-id="@Model.Id" draggable="true">
    <!-- Priority Indicator -->
    <div class="priority-bar priority-@Model.Priority.ToString().ToLower()"></div>

    <!-- Card Header -->
    <div class="card-header">
        <h4 class="card-title">@Model.Title</h4>
        <div class="dropdown">
            <button class="btn-card-menu" data-bs-toggle="dropdown">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="1" />
                    <circle cx="12" cy="5" r="1" />
                    <circle cx="12" cy="19" r="1" />
                </svg>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <a class="dropdown-item" href="#" data-task-id="@Model.Id" onclick="openTaskDetails('@Model.Id')">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
                            <circle cx="12" cy="12" r="3" />
                        </svg>
                        View Details
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" href="#" onclick="editTask('@Model.Id')">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
                        </svg>
                        Edit
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item text-danger" href="#" onclick="event.preventDefault(); deleteTask('@Model.Id')">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="3 6 5 6 21 6" />
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                        </svg>
                        Delete
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Priority Badge -->
    <div class="card-badges">
        <span class="badge badge-priority priority-@Model.Priority.ToString().ToLower()">
            @Model.Priority
        </span>
    </div>

    <!-- Due Date (if exists) -->
    @if (Model.Status == Taskify.Models.TaskStatus.Completed)
    {
        <div class="card-due-date" style="background: #d1fae5; color: #059669;">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12" />
            </svg>
            <span>Completed</span>
        </div>
    }
    else if (Model.DueDate.HasValue)
    {
        var daysUntilDue = (Model.DueDate.Value.Date - DateTime.Now.Date).Days;
        var dueDateClass = daysUntilDue < 0 ? "overdue" : daysUntilDue <= 2 ? "urgent" : "normal";

        <div class="card-due-date @dueDateClass">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10" />
                <polyline points="12 6 12 12 16 14" />
            </svg>
            <span>
                @if (daysUntilDue < 0)
                {
                    <text>Overdue by @Math.Abs(daysUntilDue) days</text>
                }
                else if (daysUntilDue == 0)
                {
                    <text>Due today</text>
                }
                else if (daysUntilDue == 1)
                {
                    <text>Due tomorrow</text>
                }
                else
                {
                    @Model.DueDate.Value.ToString("MMM dd")
                }
            </span>
        </div>
    }

    <!-- Card Footer -->
    <div class="card-footer">
        <!-- Meta Info -->
        <div class="card-meta">
            @if (Model.CommentsCount > 0)
            {
                <div class="meta-item">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />
                    </svg>
                    <span>@Model.CommentsCount</span>
                </div>
            }

            @if (Model.AttachmentsCount > 0)
            {
                <div class="meta-item">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48" />
                    </svg>
                    <span>@Model.AttachmentsCount</span>
                </div>
            }
        </div>

        <!-- Assignees -->
        @if (Model.Assignees != null && Model.Assignees.Any())
        {
            <div class="card-assignees">
                @foreach (var assignee in Model.Assignees.Take(3))
                {
                    @if (!string.IsNullOrEmpty(assignee.AvatarUrl))
                    {
                        <img src="@assignee.AvatarUrl" alt="@assignee.FullName" class="assignee-avatar" title="@assignee.FullName" />
                    }
                    else
                    {
                        <div class="assignee-avatar" title="@assignee.FullName">@assignee.Initials</div>
                    }
                }

                @if (Model.Assignees.Count > 3)
                {
                    <div class="assignee-avatar more">+@(Model.Assignees.Count - 3)</div>
                }
            </div>
        }
    </div>
</div>

<script>
    // Task card interactions
    function openTaskDetails(taskId) {
        // Open modal with task details
        window.location.href = `/Task/Details/${taskId}`;
    }

    function editTask(taskId) {
      //Check user permission before redirecting to edit page
        window.location.href = `/Task/Edit/${taskId}`;
    }

        function deleteTask(taskId) {
        if (!confirm('Are you sure you want to delete this task?')) return;

        fetch(`/Tasks/Delete/${taskId}`, {
            method: 'POST'
        })
        .then(async response => {
            if (response.ok) {
                // Xóa thành công -> Xóa giao diện
                const taskCard = document.querySelector(`.task-card[data-task-id="${taskId}"]`);
                if (taskCard) taskCard.remove();
                // location.reload(); // Có thể bỏ dòng này nếu muốn xóa mượt không load lại trang
            } else {
                // [QUAN TRỌNG] Đọc lỗi từ Server gửi về
                const errorMsg = await response.text();
                alert("Không thể xóa: " + errorMsg); // Ví dụ: "Bạn chỉ có thể xóa task của chính mình"
            }
        })
        .catch(error => console.error('Error:', error));
    }
</script>