<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Taskify</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- CSS Libraries -->
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

    <style>
        /* Font smoothing cho trải nghiệm tốt hơn */
        * {
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
            background: #ffffff;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="public-navbar">
        <div class="navbar-container">
            <!-- Brand -->
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                <div class="brand-icon">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="9 11 12 14 22 4" />
                        <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" />
                    </svg>
                </div>
                <span>Taskify</span>
            </a>

            <!-- Navigation Links -->
            <ul class="navbar-nav">
                <li><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                <li><a href="#features" class="nav-link">Features</a></li>
                <li><a href="#pricing" class="nav-link">Pricing</a></li>
                <li><a asp-controller="Home" asp-action="Privacy" class="nav-link">Privacy</a></li>
            </ul>

            <!-- Action Buttons -->
            <div class="navbar-actions">
                <a asp-controller="Account" asp-action="Login" class="btn-nav btn-nav-outline">
                    Log In
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn-nav btn-nav-primary">
                    <i class="bi bi-rocket-takeoff"></i>
                    <span>Get Started Free</span>
                </a>
            </div>

            <!-- Mobile Menu Toggle -->
            <button class="mobile-menu-toggle" aria-label="Toggle menu">
                <i class="bi bi-list"></i>
            </button>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="public-footer">
        <div class="footer-container">
            <div class="footer-grid">
                <!-- Brand Section -->
                <div class="footer-brand">
                    <div class="footer-logo">
                        <div class="brand-icon">
                            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="9 11 12 14 22 4" />
                                <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" />
                            </svg>
                        </div>
                        <span>Taskify</span>
                    </div>
                    <p class="footer-description">
                        Taskify helps teams move work forward. Collaborate, manage projects,
                        and reach new productivity peaks with our intuitive task management platform.
                    </p>
                </div>

                <!-- Product -->
                <div class="footer-section">
                    <h4>Product</h4>
                    <ul class="footer-links">
                        <li><a href="#features" class="footer-link">Features</a></li>
                        <li><a href="#pricing" class="footer-link">Pricing</a></li>
                        <li><a href="#integrations" class="footer-link">Integrations</a></li>
                        <li><a href="#changelog" class="footer-link">Changelog</a></li>
                    </ul>
                </div>

                <!-- Company -->
                <div class="footer-section">
                    <h4>Company</h4>
                    <ul class="footer-links">
                        <li><a href="#about" class="footer-link">About Us</a></li>
                        <li><a href="#careers" class="footer-link">Careers</a></li>
                        <li><a href="#blog" class="footer-link">Blog</a></li>
                        <li><a href="#contact" class="footer-link">Contact</a></li>
                    </ul>
                </div>

                <!-- Legal -->
                <div class="footer-section">
                    <h4>Legal</h4>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="Privacy" class="footer-link">Privacy Policy</a></li>
                        <li><a href="#terms" class="footer-link">Terms of Service</a></li>
                        <li><a href="#cookies" class="footer-link">Cookie Policy</a></li>
                        <li><a href="#gdpr" class="footer-link">GDPR</a></li>
                    </ul>
                </div>
            </div>

            <!-- Footer Bottom -->
            <div class="footer-bottom">
                <p class="footer-copyright">
                    &copy; 2025 Taskify. All rights reserved.
                </p>
                <div class="footer-social">
                    <a href="#" class="social-link" aria-label="Twitter">
                        <i class="bi bi-twitter-x"></i>
                    </a>
                    <a href="#" class="social-link" aria-label="Facebook">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a href="#" class="social-link" aria-label="LinkedIn">
                        <i class="bi bi-linkedin"></i>
                    </a>
                    <a href="#" class="social-link" aria-label="GitHub">
                        <i class="bi bi-github"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Smooth Scroll Script -->
    <script>
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const href = this.getAttribute('href');
                if (href !== '#' && href !== '') {
                    const target = document.querySelector(href);
                    if (target) {
                        e.preventDefault();
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                }
            });
        });

        // Add scroll effect to navbar
        let lastScroll = 0;
        const navbar = document.querySelector('.public-navbar');

        window.addEventListener('scroll', () => {
            const currentScroll = window.pageYOffset;

            if (currentScroll > 100) {
                navbar.style.boxShadow = '0 2px 8px rgba(0, 0, 0, 0.06)';
                navbar.style.padding = '12px 0';
            } else {
                navbar.style.boxShadow = '0 1px 3px rgba(0, 0, 0, 0.02)';
                navbar.style.padding = '20px 0';
            }

            lastScroll = currentScroll;
        });

        // Mobile menu toggle (basic implementation)
        const mobileToggle = document.querySelector('.mobile-menu-toggle');
        const navbarNav = document.querySelector('.navbar-nav');

        if (mobileToggle) {
            mobileToggle.addEventListener('click', () => {
                navbarNav.style.display = navbarNav.style.display === 'flex' ? 'none' : 'flex';
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>