<body>
    <!-- Navbar -->
    <nav class="public-navbar">
        <div class="navbar-container">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                <div class="brand-icon">
                    <i class="bi bi-kanban-fill"></i>
                </div>
                Taskify
            </a>

            <ul class="navbar-nav">
                <li><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                <li><a href="#features" class="nav-link">Features</a></li>
                <li><a href="#pricing" class="nav-link">Pricing</a></li>
                <li><a asp-controller="Home" asp-action="Privacy" class="nav-link">Privacy</a></li>
            </ul>

            <div class="navbar-actions">
                <a asp-controller="Account" asp-action="Login" class="btn-nav btn-nav-outline">
                    Log In
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn-nav btn-nav-primary">
                    <i class="bi bi-rocket-takeoff"></i>
                    Get Started Free
                </a>
            </div>

            <button class="mobile-menu-toggle">
                <i class="bi bi-list"></i>
            </button>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="public-footer">
        <div class="footer-container">
            <div class="footer-grid">
                <!-- Brand Section -->
                <div class="footer-brand">
                    <div class="footer-logo">
                        <div class="brand-icon">
                            <i class="bi bi-kanban-fill"></i>
                        </div>
                        Taskify
                    </div>
                    <p class="footer-description">
                        Taskify helps teams move work forward. Collaborate, manage projects,
                        and reach new productivity peaks with our intuitive task management platform.
                    </p>
                </div>

                <!-- Product -->
                <div class="footer-section">
                    <h4>Product</h4>
                    <ul class="footer-links">
                        <li><a href="#features" class="footer-link">Features</a></li>
                        <li><a href="#pricing" class="footer-link">Pricing</a></li>
                        <li><a href="#" class="footer-link">Integrations</a></li>
                        <li><a href="#" class="footer-link">Changelog</a></li>
                    </ul>
                </div>

                <!-- Company -->
                <div class="footer-section">
                    <h4>Company</h4>
                    <ul class="footer-links">
                        <li><a href="#" class="footer-link">About Us</a></li>
                        <li><a href="#" class="footer-link">Careers</a></li>
                        <li><a href="#" class="footer-link">Blog</a></li>
                        <li><a href="#" class="footer-link">Contact</a></li>
                    </ul>
                </div>

                <!-- Legal -->
                <div class="footer-section">
                    <h4>Legal</h4>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="Privacy" class="footer-link">Privacy Policy</a></li>
                        <li><a href="#" class="footer-link">Terms of Service</a></li>
                        <li><a href="#" class="footer-link">Cookie Policy</a></li>
                        <li><a href="#" class="footer-link">GDPR</a></li>
                    </ul>
                </div>
            </div>

            <!-- Footer Bottom -->
            <div class="footer-bottom">
                <p class="footer-copyright">
                    &copy; 2024 Taskify. All rights reserved.
                </p>
                <div class="footer-social">
                    <a href="#" class="social-link">
                        <i class="bi bi-twitter"></i>
                    </a>
                    <a href="#" class="social-link">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a href="#" class="social-link">
                        <i class="bi bi-linkedin"></i>
                    </a>
                    <a href="#" class="social-link">
                        <i class="bi bi-github"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>